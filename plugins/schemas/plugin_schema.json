{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TeslaAI Plugin Metadata Schema",
  "description": "JSON-схема метаописания плагинов TeslaAI",
  "type": "object",
  "required": ["id", "name", "version", "entrypoint", "type", "author", "security"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9\\-]{6,64}$",
      "description": "Уникальный идентификатор плагина"
    },
    "name": {
      "type": "string",
      "maxLength": 128,
      "description": "Человеко-читаемое имя"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Версия плагина (semver)"
    },
    "description": {
      "type": "string",
      "maxLength": 512,
      "description": "Описание назначения плагина"
    },
    "entrypoint": {
      "type": "string",
      "description": "Импортируемый путь к классу/функции плагина"
    },
    "type": {
      "type": "string",
      "enum": ["scanner", "analyzer", "notifier", "health", "zk", "custom"],
      "description": "Тип плагина"
    },
    "author": {
      "type": "object",
      "required": ["name", "contact"],
      "properties": {
        "name": {
          "type": "string",
          "maxLength": 100
        },
        "contact": {
          "type": "string",
          "format": "email"
        },
        "organization": {
          "type": "string"
        }
      }
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9_\\-\\.]+$"
      },
      "description": "Зависимости (внутренние или внешние)"
    },
    "compatibility": {
      "type": "object",
      "properties": {
        "api_version": {
          "type": "string",
          "pattern": "^v\\d+\\.\\d+$"
        },
        "os": {
          "type": "string",
          "enum": ["linux", "windows", "macos", "any"]
        }
      }
    },
    "security": {
      "type": "object",
      "required": ["signed", "sandbox"],
      "properties": {
        "signed": {
          "type": "boolean",
          "description": "Требуется ли цифровая подпись"
        },
        "signature": {
          "type": "string",
          "description": "Базовая подпись HMAC или RSA"
        },
        "zk_proof": {
          "type": "string",
          "description": "Zero-knowledge proof (опционально)"
        },
        "sandbox": {
          "type": "boolean",
          "description": "Запуск в sandbox-режиме"
        }
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "metadata": {
      "type": "object",
      "description": "Дополнительные поля"
    }
  },
  "additionalProperties": false
}
