{
  "name": "airdrop_manager",
  "version": "1.0.0",
  "description": "Industrial-grade Airdrop Manager: CLI + SDK for orchestrating Web3 airdrops with safety, audits and observability.",
  "private": false,
  "type": "module",
  "license": "MIT",
  "author": "",
  "homepage": "",
  "repository": {
    "type": "git",
    "url": ""
  },
  "bugs": {
    "url": ""
  },
  "keywords": [
    "airdrop",
    "web3",
    "cli",
    "sdk",
    "distribution",
    "audit",
    "typescript"
  ],
  "engines": {
    "node": ">=20.10.0",
    "npm": ">=10.0.0"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./cli": {
      "import": "./dist/cli.mjs",
      "require": "./dist/cli.cjs",
      "default": "./dist/cli.mjs"
    }
  },
  "bin": {
    "airdrop-manager": "./dist/cli.mjs"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prepare": "husky install",
    "clean": "rimraf dist coverage .tsbuildinfo",
    "build": "tsup src/index.ts --format esm,cjs --dts --clean --out-dir dist",
    "build:cli": "tsup src/cli.ts --format esm,cjs --dts=false --clean --out-dir dist --banner.cli '#!/usr/bin/env node'",
    "build:all": "npm-run-all clean -p build build:cli",
    "dev": "tsx watch src/cli.ts",
    "start": "node ./dist/cli.mjs",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "audit": "audit-ci --moderate",
    "release": "semantic-release"
  },
  "dependencies": {
    "@lukeed/uuid": "^2.0.1",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "pino": "^9.3.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/node": "^20.14.12",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "audit-ci": "^7.0.1",
    "c8": "^9.1.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "tsup": "^8.2.4",
    "tsx": "^4.16.2",
    "typescript": "^5.6.2",
    "vitest": "^2.1.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json}": [
      "eslint --fix"
    ],
    "*.{md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es2023": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint",
      "import"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/recommended",
      "plugin:import/typescript",
      "prettier"
    ],
    "settings": {
      "import/resolver": {
        "typescript": {
          "alwaysTryTypes": true,
          "project": "./tsconfig.json"
        }
      }
    },
    "rules": {
      "import/no-unresolved": "error",
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          },
          "newlines-between": "always",
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index",
            "object",
            "type"
          ]
        }
      ],
      "@typescript-eslint/consistent-type-imports": [
        "error",
        {
          "prefer": "type-imports"
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ]
    },
    "ignorePatterns": [
      "dist/",
      "coverage/",
      "*.config.js",
      "*.config.cjs"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "overrides": {},
  "packageManager": "npm@10"
}
