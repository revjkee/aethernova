# airdrop_manager — EditorConfig (root)
# Спецификация и поддерживаемые свойства: https://spec.editorconfig.org/
# Док: список свойств и формат файла: https://docs.editorconfig.org/en/master/editorconfig-format.html

root = true

# Базовые правила для всех текстовых файлов
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python: PEP-совместимый отступ 4 пробела
[*.{py,pyi}]
indent_style = space
indent_size = 4

# Конфигурации и разметка: JSON/YAML/TOML — 2 пробела
[*.{json,yml,yaml,toml}]
indent_style = space
indent_size = 2

# Markdown: сохраняем хвостовые пробелы для жёстких переносов
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Скрипты оболочки
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Make: рецепты требуют табов (GNU Make)
[{Makefile,makefile,GNUmakefile}]
indent_style = tab
tab_width = 4

# Docker/Containerfile
[{Dockerfile,Containerfile,*.Dockerfile,*.dockerfile}]
indent_style = space
indent_size = 2

# Протоколы/SQL/INI/CFG/CONF
[*.{proto,sql,ini,cfg,conf}]
indent_style = space
indent_size = 2

# CSS/SCSS/HTML/JS/TS и их JSX/TSX-варианты
[*.{css,scss,html,htm,js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
