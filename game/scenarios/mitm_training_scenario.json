{
  "scenario_name": "MITM Attack Training",
  "description": "Simulate a man-in-the-middle attack in a controlled network environment.",
  "environment": {
    "map": "OfficeNetwork",
    "nodes": ["Router", "ClientA", "ClientB"]
  },
  "agents": [
    {
      "id": "attacker",
      "role": "MITM",
      "capabilities": ["sniffing", "packet_injection"]
    },
    {
      "id": "victim",
      "role": "Client",
      "behavior": "normal_traffic"
    }
  ],
  "steps": [
    {
      "step_id": 1,
      "action": "Start sniffing",
      "trigger": "attacker_near_router",
      "success_condition": "packets_captured > 100"
    },
    {
      "step_id": 2,
      "action": "Inject malicious packet",
      "trigger": "packets_captured > 100",
      "success_condition": "victim_received_packet == true"
    }
  ],
  "metrics": {
    "packets_captured": 0,
    "successful_injections": 0
  }
}
