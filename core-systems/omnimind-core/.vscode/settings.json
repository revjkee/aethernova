{
  "files.eol": "\n",
  "files.encoding": "utf8",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/*.pyo": true,
    "**/*.pyd": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/.pytest_cache": true,
    "**/.coverage": true,
    "**/htmlcov": true,
    "**/dist": true,
    "**/build": true,
    "**/*.egg-info": true,
    "**/.venv": false
  },
  "files.watcherExclude": {
    "**/.git/**": true,
    "**/.mypy_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/.pytest_cache/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/node_modules/**": true
  },

  "editor.tabSize": 4,
  "editor.detectIndentation": false,
  "editor.rulers": [88, 100, 120],
  "editor.wordWrap": "off",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.organizeImports.ruff": true,
      "source.fixAll.ruff": true
    }
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },

  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.venvPath": "${workspaceFolder}",
  "python.analysis.typeCheckingMode": "strict",
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.useLibraryCodeForTypes": true,
  "python.languageServer": "Pylance",
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "-q",
    "--maxfail=1"
  ],
  "python.testing.cwd": "${workspaceFolder}",
  "python.formatting.provider": "none",

  "ruff.enable": true,
  "ruff.lint.enable": true,
  "ruff.fixAll": true,
  "ruff.organizeImports": true,
  "ruff.lint.args": [
    "--preview"
  ],

  "mypy-type-checker.args": [
    "--strict",
    "--pretty",
    "--show-error-codes",
    "--enable-incomplete-feature=NewGenericSyntax"
  ],
  "mypy-type-checker.severity": {
    "reportGeneralTypeIssues": "error",
    "reportOptionalSubscript": "error"
  },
  "mypy-type-checker.interpretedGlibc": "auto",

  "pytestExplorer.pytestPath": "${workspaceFolder}/.venv/bin/pytest",
  "pythonTestExplorer.testFramework": "pytest",

  "coverage-gutters.showLineCoverage": true,
  "coverage-gutters.showRulerCoverage": true,
  "coverage-gutters.coverageFileNames": [
    "coverage.xml"
  ],

  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": ".github/workflows/*.yml",
    "https://json.schemastore.org/github-workflow.json": ".github/workflows/*.yaml",
    "https://json.schemastore.org/docker-compose.json": [
      "docker-compose.yml",
      "docker-compose.yaml"
    ],
    "https://json.schemastore.org/kustomization.json": "kustomization.{yml,yaml}",
    "https://json.schemastore.org/chart.json": "helm-charts/**/Chart.yaml"
  },
  "yaml.validate": true,

  "json.schemas": [
    {
      "fileMatch": [
        "package.json"
      ],
      "url": "https://json.schemastore.org/package.json"
    },
    {
      "fileMatch": [
        "tsconfig.json",
        "tsconfig.*.json"
      ],
      "url": "https://json.schemastore.org/tsconfig"
    },
    {
      "fileMatch": [
        ".prettierrc",
        ".prettierrc.json",
        "prettier.config.json"
      ],
      "url": "https://json.schemastore.org/prettierrc"
    }
  ],

  "markdownlint.config": {
    "default": true,
    "MD013": false,
    "MD033": false,
    "MD041": false
  },

  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.osx": "bash",
  "terminal.integrated.defaultProfile.windows": "PowerShell",

  "git.confirmSync": false,
  "git.autofetch": true,
  "git.enableSmartCommit": true,

  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,

  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.venv": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/.pytest_cache": true
  }
}
