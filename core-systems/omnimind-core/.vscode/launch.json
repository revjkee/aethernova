// path: omnimind-core/.vscode/launch.json
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Omnimind Core: Debug Module",
      "type": "python",
      "request": "launch",
      "module": "omnimind_core",
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}/src"
    },
    {
      "name": "Omnimind Core: Run Tests (pytest)",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-q",
        "--disable-warnings",
        "--maxfail=1",
        "--cov=omnimind_core",
        "--cov-report=term-missing",
        "tests"
      ],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Omnimind Core: Run App (Uvicorn)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "omnimind_core.app:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload"
      ],
      "jinja": true,
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}/src"
    },
    {
      "name": "Attach to Remote (Docker/Debugpy)",
      "type": "python",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/src",
          "remoteRoot": "/app/src"
        }
      ],
      "justMyCode": true
    }
  ]
}
