# EditorConfig для omnimind-core
# Документация: https://editorconfig.org/
# Цель: Единый стиль кода во всех IDE, редакторах и CI.

root = true

###############################################################################
# Общие правила
###############################################################################
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Унифицированные отступы (по умолчанию пробелы, ширина 4)
indent_style = space
indent_size = 4

# Максимальная длина строки (совместимость с linters/CI)
max_line_length = 100

###############################################################################
# Python
###############################################################################
[*.py]
indent_size = 4
continuation_indent_size = 4
# Совместимость с PEP8
max_line_length = 88

###############################################################################
# Markdown / MDX
###############################################################################
[*.{md,mdx}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false   # разрешаем двойные пробелы в markdown
max_line_length = off

###############################################################################
# YAML / YML
###############################################################################
[*.{yaml,yml}]
indent_style = space
indent_size = 2

###############################################################################
# JSON / JSONC
###############################################################################
[*.{json,jsonc}]
indent_style = space
indent_size = 2

###############################################################################
# TOML
###############################################################################
[*.toml]
indent_style = space
indent_size = 2

###############################################################################
# Dockerfile
###############################################################################
[Dockerfile]
indent_style = space
indent_size = 2

###############################################################################
# Makefile
###############################################################################
[Makefile]
indent_style = tab
indent_size = 4

###############################################################################
# Protobuf
###############################################################################
[*.proto]
indent_style = space
indent_size = 2
max_line_length = 120

###############################################################################
# Shell scripts
###############################################################################
[*.{sh,bash}]
indent_style = space
indent_size = 4

###############################################################################
# ReST документация
###############################################################################
[*.rst]
indent_style = space
indent_size = 3
max_line_length = 100

###############################################################################
# Конфигурации CI/CD
###############################################################################
[*.{ini,cfg}]
indent_style = space
indent_size = 2

###############################################################################
# Лицензии и текстовые файлы
###############################################################################
[*.{txt,license,LICENSE}]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
