{
  "name": "@omnimind/sdk",
  "version": "1.0.0",
  "description": "Official TypeScript SDK for Omnimind APIs (typed, tree-shakable, ESM/CJS dual package).",
  "keywords": [
    "omnimind",
    "sdk",
    "typescript",
    "client",
    "api",
    "llm"
  ],
  "license": "MIT",
  "author": "Omnimind Platform Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/omnimind-core.git",
    "directory": "ops/sdks/typescript"
  },
  "homepage": "https://github.com/your-org/omnimind-core#readme",
  "bugs": {
    "url": "https://github.com/your-org/omnimind-core/issues"
  },

  "type": "module",
  "sideEffects": false,

  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },

  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/*.d.ts"
      ]
    }
  },

  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],

  "engines": {
    "node": ">=18.17.0"
  },

  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },

  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/your-org"
  },

  "scripts": {
    "clean": "rimraf dist .turbo .tsbuildinfo coverage",
    "build": "tsup src/index.ts --dts --format esm,cjs --sourcemap --clean",
    "build:watch": "tsup src/index.ts --dts --format esm,cjs --sourcemap --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "docs": "typedoc --out docs src/index.ts",
    "release": "changeset version && pnpm i --no-frozen-lockfile && pnpm build && changeset publish",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "pnpm run build && pnpm run typecheck && pnpm run lint && pnpm run test"
  },

  "dependencies": {
    "cross-fetch": "^4.0.0",
    "zod": "^3.23.8"
  },

  "peerDependencies": {
    "typescript": ">=5.4.0"
  },

  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@types/node": "^20.14.10",
    "@types/cross-fetch": "^3.0.6",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "eslint": "^9.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.7",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.1.0",
    "typedoc": "^0.25.13",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5",
    "@vitest/coverage-v8": "^2.0.5"
  },

  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "node ./.git-hooks/verify-commit-msg.mjs"
  },

  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json,yml,yaml}": [
      "prettier --write"
    ]
  },

  "eslintConfig": {
    "root": true,
    "env": { "es2023": true, "node": true },
    "parser": "@typescript-eslint/parser",
    "parserOptions": { "project": "./tsconfig.json", "tsconfigRootDir": "." },
    "plugins": ["@typescript-eslint", "import"],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/recommended",
      "plugin:import/typescript",
      "prettier"
    ],
    "rules": {
      "import/order": [
        "warn",
        {
          "groups": ["builtin", "external", "internal", "parent", "sibling", "index"],
          "newlines-between": "always",
          "alphabetize": { "order": "asc", "caseInsensitive": true }
        }
      ],
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-floating-promises": "error",
      "@typescript-eslint/consistent-type-imports": "warn"
    },
    "ignorePatterns": ["dist", "docs", "**/*.d.ts"]
  },

  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true,
    "arrowParens": "always"
  },

  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs",
    "tsconfig": "tsconfig.json",
    "readme": "README.md",
    "categorizeByGroup": true,
    "cleanOutputDir": true
  },

  "packageManager": "pnpm@9.6.0"
}
