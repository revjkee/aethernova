{
  "name": "@aethernova/oblivionvault-core-sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for OblivionVault Core APIs: typed client, fetch-based transport, retries and robust build for Node and browsers.",
  "license": "UNLICENSED",
  "type": "module",
  "private": false,
  "sideEffects": false,
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=9.0.0"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE*"
  ],
  "keywords": [
    "sdk",
    "typescript",
    "client",
    "api",
    "oblivionvault",
    "aethernova"
  ],
  "repository": {
    "type": "git",
    "url": "REPLACE_ME_WITH_YOUR_GIT_URL"
  },
  "bugs": {
    "url": "REPLACE_ME_WITH_YOUR_ISSUES_URL"
  },
  "homepage": "REPLACE_ME_WITH_YOUR_HOMEPAGE",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "provenance": true
  },
  "scripts": {
    "clean": "rimraf dist .turbo .tsbuildinfo coverage",
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "check": "npm run lint && npm run fmt:check && npm run typecheck && npm run test",
    "docs": "typedoc",
    "prepack": "npm run clean && npm run check && npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.2.4",
    "typedoc": "^0.25.13",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es2023": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "no-console": "warn",
      "@typescript-eslint/consistent-type-imports": "error",
      "@typescript-eslint/no-unused-vars": [
        "error",
        { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }
      ]
    },
    "ignorePatterns": [
      "dist",
      "coverage"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true,
    "arrowParens": "always"
  },
  "vitest": {
    "globals": true,
    "environment": "node",
    "coverage": {
      "provider": "v8",
      "reporter": [
        "text",
        "lcov"
      ],
      "branches": 90,
      "functions": 95,
      "lines": 95,
      "statements": 95
    }
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true,
    "sourcemap": true,
    "clean": true,
    "target": "es2022",
    "minify": false,
    "treeshake": true,
    "splitting": false,
    "skipNodeModulesBundle": true
  }
}
