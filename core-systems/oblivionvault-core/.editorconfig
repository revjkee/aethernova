# root EditorConfig for OblivionVault Core
# Applies across languages and tools to ensure consistent diffs and reproducible builds.
root = true

############################
# Global defaults
############################
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Text files with 2-space indentation (configs, data, web)
[*.{json,jsonc,yml,yaml,toml,ini,xml}]
indent_style = space
indent_size = 2

# Markdown: keep trailing spaces (they create line breaks), keep final newline
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# ReStructuredText / AsciiDoc docs
[*.{rst,adoc,asciidoc}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

############################
# Programming languages
############################

# Python (code, stubs, notebooks exported as .py)
[*.{py,pyi}]
indent_style = space
indent_size = 4

# TypeScript / JavaScript (incl. React)
[*.{ts,tsx,js,jsx,cjs,mjs}]
indent_style = space
indent_size = 2

# CSS / SCSS / Less
[*.{css,scss,less}]
indent_style = space
indent_size = 2

# HTML
[*.html]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash}]
end_of_line = lf
indent_style = space
indent_size = 2

# PowerShell (Windows-native tends to CRLF)
[*.ps1]
end_of_line = crlf
indent_style = space
indent_size = 4

# Windows batch files
[*.bat]
end_of_line = crlf
indent_style = tab
tab_width = 4

# Makefile requires hard tabs
[Makefile]
indent_style = tab
tab_width = 8
trim_trailing_whitespace = false

# Go uses tabs by convention; gofmt will handle alignment
[*.go]
indent_style = tab
tab_width = 8
end_of_line = lf

# Rust
[*.rs]
indent_style = space
indent_size = 4

# C / C++
[*.{c,cc,cpp,h,hpp}]
indent_style = space
indent_size = 4

# Java
[*.java]
indent_style = space
indent_size = 4

# C#
[*.cs]
indent_style = space
indent_size = 4

# Kotlin
[*.kt]
indent_style = space
indent_size = 4

# SQL
[*.sql]
indent_style = space
indent_size = 2

# Protobuf
[*.proto]
indent_style = space
indent_size = 2

# Dockerfile
[Dockerfile]
indent_style = space
indent_size = 4

############################
# Special cases & generated
############################

# Minified bundles and vendor blobs: avoid noisy diffs
[*.min.{js,css}]
insert_final_newline = false
trim_trailing_whitespace = false

# Lock files (keep tool defaults, but ensure final newline)
[{package-lock.json,yarn.lock,pnpm-lock.yaml,Cargo.lock,poetry.lock,requirements.txt,go.sum}]
indent_style = space
indent_size = 2
insert_final_newline = true

# Patches and diffs should preserve whitespace exactly
[*.{patch,diff}]
trim_trailing_whitespace = false
insert_final_newline = false

# License / key material / binary headers
[{LICENSE,LICENSE.*,COPYING*,*.pem,*.key,*.crt}]
trim_trailing_whitespace = false
insert_final_newline = true

# Git attributes or ignore files (let tools decide, but keep newline)
[.{gitattributes,gitignore}]
insert_final_newline = true

############################
# Local tooling hints
############################
# Some tools read EditorConfig for wrapper settings; keep conservative.
# Max line length is editor-specific; enforce via linters/formatters (Black, Prettier, gofmt, rustfmt).
