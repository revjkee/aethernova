{
  "id": null,
  "uid": "llm-alerts",
  "title": "LLM Alerts & Anomalies",
  "tags": ["llmops", "alerts", "toxicity", "quality", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "15s",
  "panels": [
    {
      "type": "stat",
      "title": "Total Firing Alerts",
      "id": 1,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(alertmanager_alerts{alertstate=\"firing\"})",
          "refId": "A"
        }
      ]
    },
    {
      "type": "table",
      "title": "Live Alert States",
      "id": 2,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "alertmanager_alerts{alertstate=\"firing\"}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Toxicity Rate Detected",
      "id": 3,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(llm_toxicity_score_above_threshold_total[5m])",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Prompt Injection Events",
      "id": 4,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "increase(llm_prompt_injection_detected_total[10m])",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Jailbreak Attempts",
      "id": 5,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "increase(llm_jailbreak_attempts_total[10m])",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Response Latency (P95)",
      "id": 6,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(llm_response_latency_seconds_bucket[5m])) by (le))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "gauge",
      "title": "Hallucination Rate",
      "id": 7,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "avg_over_time(llm_hallucination_score[5m])",
          "refId": "A"
        }
      ],
      "thresholds": {
        "mode": "absolute",
        "steps": [
          { "color": "green", "value": null },
          { "color": "orange", "value": 0.3 },
          { "color": "red", "value": 0.6 }
        ]
      }
    },
    {
      "type": "stat",
      "title": "LLM Internal Errors (5xx)",
      "id": 8,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "increase(llm_internal_error_total[5m])",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Rejected Outputs by Filter",
      "id": 9,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(llm_output_filter_rejections_total[5m])",
          "refId": "A"
        }
      ]
    },
    {
      "type": "heatmap",
      "title": "Risk Score (Token-Level)",
      "id": 10,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "llm_token_risk_score",
          "refId": "A"
        }
      ]
    }
  ]
}
