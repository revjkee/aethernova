# EditorConfig помогает поддерживать единый стиль кода в разных редакторах и IDE.
# Документация: https://editorconfig.org

root = true

# ===== Базовые настройки для всех файлов =====
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# ===== Python (код ядра mythos-core) =====
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88
# Совместимо с Black, Ruff и PEP 8
insert_final_newline = true

# ===== JSON/JSONC/Schema =====
[*.{json,jsonc}]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# ===== YAML (схемы, CI/CD, конфиги) =====
[*.{yaml,yml}]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# ===== Markdown / Documentation =====
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false   # важно: сохраняем пробелы в конце строк для переносов
insert_final_newline = true

# ===== ReStructuredText / RST =====
[*.rst]
indent_style = space
indent_size = 3
trim_trailing_whitespace = false
insert_final_newline = true

# ===== TOML (pyproject.toml, ruff.toml, mypy.ini) =====
[*.toml]
indent_style = space
indent_size = 2

# ===== INI / Config =====
[*.ini]
indent_style = space
indent_size = 2

# ===== Shell scripts =====
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# ===== Makefile (только табы!) =====
[Makefile]
indent_style = tab
end_of_line = lf

# ===== License / Text / Plain files =====
[{LICENSE,*.txt}]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# ===== Git-related =====
[.gitignore]
insert_final_newline = true
trim_trailing_whitespace = true
