{
  "name": "@aethernova/mythos-core-sdk",
  "version": "1.0.0",
  "description": "TypeScript SDK for Mythos Core v1: typed client, models, utilities (browser and Node 18+).",
  "license": "MIT",
  "author": "Aethernova / NeuroCity contributors",
  "type": "module",
  "sideEffects": false,
  "private": false,

  "engines": {
    "node": ">=18.17"
  },

  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "browser": "./dist/index.browser.mjs",

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": "./dist/index.browser.mjs",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },

  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],

  "keywords": [
    "mythos",
    "mythos-core",
    "sdk",
    "typescript",
    "client",
    "grpc",
    "rest",
    "fetch"
  ],

  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/your-org/your-repo.git",
    "directory": "sdks/typescript"
  },

  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
  },

  "scripts": {
    "clean": "rimraf dist .tsbuildinfo",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.mts,.cts",
    "lint:fix": "eslint . --ext .ts,.tsx,.mts,.cts --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest run --reporter=default",
    "test:watch": "vitest --watch",
    "coverage": "vitest run --coverage",
    "docs": "typedoc",
    "prepare": "husky install",
    "prepublishOnly": "npm run clean && npm run build && npm run typecheck && npm run lint && npm run test",
    "release": "changeset version && npm run build && changeset publish",
    "release:auto": "semantic-release"
  },

  "dependencies": {
    "@bufbuild/protobuf": "^2.0.0",
    "zod": "^3.23.8"
  },

  "peerDependencies": {
    "undici": ">=6.0.0"
  },
  "peerDependenciesMeta": {
    "undici": {
      "optional": true
    }
  },

  "devDependencies": {
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.5.0",
    "eslint-plugin-unused-imports": "^4.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.7",
    "tsup": "^8.1.0",
    "typedoc": "^0.25.13",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5",
    "@vitest/coverage-v8": "^2.0.5",
    "@changesets/cli": "^2.27.7",
    "semantic-release": "^23.0.0"
  },

  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true,
    "sourcemap": true,
    "splitting": false,
    "minify": true,
    "clean": true,
    "target": "es2022",
    "platform": "neutral",
    "env": {
      "MYTHOS_SDK_NAME": "@aethernova/mythos-core-sdk"
    },
    "outDir": "dist",
    "outExtension": {
      "cjs": ".cjs",
      "esm": ".mjs"
    }
  },

  "lint-staged": {
    "*.{ts,tsx,cts,mts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },

  "eslintConfig": {
    "root": true,
    "env": {
      "es2022": true,
      "node": true,
      "browser": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": false,
      "sourceType": "module",
      "ecmaVersion": "latest"
    },
    "plugins": [
      "@typescript-eslint",
      "unused-imports",
      "import",
      "jsdoc"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/recommended",
      "plugin:jsdoc/recommended",
      "prettier"
    ],
    "rules": {
      "unused-imports/no-unused-imports": "error",
      "import/no-unresolved": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-explicit-any": "warn",
      "jsdoc/require-param-type": "off",
      "jsdoc/require-returns-type": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.test.ts"
        ],
        "env": {
          "vitest": true
        },
        "rules": {
          "@typescript-eslint/no-explicit-any": "off"
        }
      }
    ]
  },

  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true
  },

  "typedocOptions": {
    "entryPoints": [
      "src/index.ts"
    ],
    "out": "dist/docs",
    "tsconfig": "tsconfig.json",
    "skipErrorChecking": true
  },

  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/your-org"
  }
}
