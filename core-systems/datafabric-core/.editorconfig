# datafabric-core / .editorconfig
# Спецификация: https://editorconfig.org
root = true

# Базовые настройки для всех файлов
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# ------------------------------
# Python
[*.py]
indent_style = space
indent_size = 4

# Тестовые данные/скрипты Python (если хотите иные правила — измените здесь)
[tests/**.py]
indent_style = space
indent_size = 4

# ------------------------------
# TOML / INI (pyproject.toml, ruff.toml, etc.)
[*.toml]
indent_style = space
indent_size = 2

[*.ini]
indent_style = space
indent_size = 2

# ------------------------------
# YAML (конфиги CI/CD, docker-compose, k8s)
[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

# ------------------------------
# JSON / JSONC
[*.json]
indent_style = space
indent_size = 2

# ------------------------------
# Markdown (не срезаем хвостовые пробелы — важны для переносов строк)
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# ------------------------------
# Makefile (TAB обязателен по стандарту)
[Makefile]
indent_style = tab
# tab_width влияет не на поведение make, а на отображение в IDE
tab_width = 4

# ------------------------------
# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# ------------------------------
# Dockerfile
[Dockerfile]
indent_style = space
indent_size = 4

[*.dockerfile]
indent_style = space
indent_size = 4

# ------------------------------
# Protobuf / gRPC сгенерированные файлы
[*.proto]
indent_style = space
indent_size = 2

# Сгенерированные артефакты — оставляем как есть (иногда длинные строки)
[**/*_pb2.py]
trim_trailing_whitespace = false
insert_final_newline = true

[**/*_pb2_grpc.py]
trim_trailing_whitespace = false
insert_final_newline = true

# ------------------------------
# Текстовые файлы и лицензии
[*.{txt,license,LICENSE,License}]
indent_style = space
indent_size = 2
