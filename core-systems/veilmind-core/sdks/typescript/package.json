{
  "name": "@veilmind/core-sdk",
  "version": "0.1.0",
  "description": "Official TypeScript SDK for Veilmind Core APIs with first-class ESM/CJS builds and type-safe client.",
  "keywords": [
    "veilmind",
    "sdk",
    "typescript",
    "zero-trust",
    "api-client"
  ],
  "license": "MIT",
  "author": "Veilmind Engineering",
  "homepage": "https://github.com/yourorg/veilmind-core#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourorg/veilmind-core.git",
    "directory": "sdks/typescript"
  },
  "bugs": {
    "url": "https://github.com/yourorg/veilmind-core/issues"
  },

  "type": "module",
  "sideEffects": false,

  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },

  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],

  "engines": {
    "node": ">=18.17"
  },

  "packageManager": "pnpm@9.9.0",

  "scripts": {
    "clean": "rimraf dist .turbo node_modules/.cache",
    "build": "tsup src/index.ts --dts --format esm,cjs --sourcemap --minify --treeshake --clean",
    "build:watch": "tsup src/index.ts --dts --format esm,cjs --sourcemap --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"{src,test}/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"{src,test}/**/*.{ts,tsx}\" --fix",
    "format": "prettier -c .",
    "format:write": "prettier -w .",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "docs": "typedoc --out docs src/index.ts",
    "prepare": "husky install",
    "prepublishOnly": "npm run clean && npm run lint && npm run typecheck && npm run test && npm run build",
    "release:dry": "changeset version --snapshot && pnpm -r build",
    "release": "changeset publish"
  },

  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/yourorg"
    }
  ],

  "dependencies": {
    "zod": "^3.23.8",
    "undici": "^6.19.8"
  },

  "peerDependencies": {
    "typescript": ">=5.4 <6"
  },

  "devDependencies": {
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "changesets": "^2.27.8",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.10",
    "tsup": "^8.2.4",
    "typedoc": "^0.26.6",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },

  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,yml,yaml}": [
      "prettier -w"
    ],
    "src/**/*.{ts,tsx}": [
      "eslint --fix"
    ]
  },

  "eslintConfig": {
    "root": true,
    "env": {
      "es2023": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": false,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "import"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/strict-type-checked",
      "plugin:@typescript-eslint/stylistic",
      "plugin:import/recommended",
      "plugin:import/typescript",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "error",
      "@typescript-eslint/consistent-type-imports": "error",
      "import/no-default-export": "off",
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          },
          "newlines-between": "always"
        }
      ]
    }
  },

  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  },

  "typedocOptions": {
    "tsconfig": "./tsconfig.json",
    "entryPoints": [
      "./src/index.ts"
    ],
    "readme": "README.md",
    "githubPages": false
  },

  "publishConfig": {
    "access": "public",
    "provenance": true
  },

  "typesVersions": {
    "*": {
      "*": [
        "dist/*",
        "dist/index.d.ts"
      ]
    }
  },

  "security": {
    "audit": true
  }
}
