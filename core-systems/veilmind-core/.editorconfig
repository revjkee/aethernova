# veilmind-core â€” Industrial EditorConfig
# Ensures consistent style across Python, YAML, JSON, Markdown, Dockerfile, etc.

root = true

# Global defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python source code
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# YAML and YML (configs, CI/CD, Helm, Kubernetes)
[*.{yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# JSON (config, package, manifests)
[*.json]
indent_style = space
indent_size = 2

# Markdown (docs, README, ADRs)
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false   # allow trailing double-spaces for line breaks

# TOML (pyproject.toml, configs)
[*.toml]
indent_style = space
indent_size = 2

# INI and CFG (legacy configs)
[*.{ini,cfg}]
indent_style = space
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Makefile (tabs required)
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4

# HTML/HTM
[*.{html,htm}]
indent_style = space
indent_size = 2

# CSS/SCSS
[*.{css,scss}]
indent_style = space
indent_size = 2

# JavaScript / TypeScript
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

# XML (pom.xml, configs)
[*.xml]
indent_style = space
indent_size = 2

# ReST / RST (Sphinx docs)
[*.rst]
indent_style = space
indent_size = 3

# Gitignore and dotfiles
[.*ignore]
indent_style = space
indent_size = 2
