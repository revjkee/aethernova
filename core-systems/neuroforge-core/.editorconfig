# file: neuroforge-core/.editorconfig
# Универсальные правила. Этот файл — источник истины для форматирования в репозитории.
root = true

# База для всех файлов
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Веб-стек и конфиги: 2 пробела
[*.{js,jsx,ts,tsx,css,scss,less,html,xml,toml,yml,yaml,json,jsonc}]
indent_style = space
indent_size = 2

# Python
[*.py]
indent_style = space
indent_size = 4

# Shell-скрипты
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2
end_of_line = lf

# Makefile — ТОЛЬКО табы (требование GNU make)
[Makefile]
indent_style = tab

# C/C++ и заголовки
[*.{c,h,cpp,hpp,cc,cxx}]
indent_style = space
indent_size = 4

# SQL
[*.sql]
indent_style = space
indent_size = 2

# Gradle/Groovy
[*.{gradle,groovy}]
indent_style = space
indent_size = 2

# Dockerfile
[Dockerfile]
indent_style = space
indent_size = 2

# INI
[*.ini]
indent_style = space
indent_size = 2

# Протоколы/схемы
[*.{proto,avsc}]
indent_style = space
indent_size = 2

# Документация: не обрезаем хвостовые пробелы (они могут означать мягкий перенос)
[*.{md,rst,adoc}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
insert_final_newline = true

# Патчи/диффы: важно сохранять точную разметку пробелов
[*.{patch,diff}]
trim_trailing_whitespace = false

# Игнор-файлы: не трогаем хвостовые пробелы
[.gitignore]
trim_trailing_whitespace = false
insert_final_newline = true
