go.mod                              @org/security-core
go.sum                              @org/security-core
Cargo.toml                          @org/security-core
Cargo.lock                          @org/security-core

# Код и схемы
src/**                              @org/security-core
internal/**                         @org/security-core
schemas/**                          @org/security-core
migrations/**                       @org/security-core

# Тесты безопасности и регрессии
test/**                             @org/security-core
