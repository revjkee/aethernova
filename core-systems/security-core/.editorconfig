# --- Security-Core Industrial EditorConfig ---
# Унификация кода во всех IDE (VSCode, PyCharm, Vim, etc.)

root = true

# Общие правила
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Solidity
[*.sol]
indent_style = space
indent_size = 4
max_line_length = 100
insert_final_newline = true

# JSON & YAML
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# Markdown & Docs
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Dockerfiles
[Dockerfile*]
indent_style = space
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab
