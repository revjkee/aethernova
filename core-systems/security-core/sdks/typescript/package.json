{
  "name": "@neurocity/security-core-sdk",
  "version": "1.0.0",
  "description": "TypeScript SDK для security-core: клиенты, типы и утилиты Zero Trust.",
  "license": "Apache-2.0",
  "author": "NeuroCity Security Team <security@neurocity.example>",
  "repository": {
    "type": "git",
    "url": "https://git.neurocity.example/security-core/sdk-typescript.git"
  },
  "homepage": "https://docs.neurocity.example/security-core/sdk",
  "bugs": {
    "url": "https://issues.neurocity.example/projects/SEC"
  },
  "keywords": [
    "security",
    "sdk",
    "typescript",
    "zero-trust",
    "audit",
    "compliance",
    "rbac",
    "neurocity"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rimraf dist .turbo .tsbuildinfo coverage",
    "build": "tsup src/index.ts --format esm,cjs --dts --minify",
    "dev": "tsup src/index.ts --format esm,cjs --watch",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "audit": "npm audit --audit-level=high",
    "security:scan": "snyk test",
    "prepare": "husky install",
    "release": "semantic-release"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^2.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "semantic-release": "^22.0.8",
    "snyk": "^1.1293.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": true,
          "tarballDir": "release"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": "release/*.tgz"
        }
      ]
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
