{
  "name": "security-core (NeuroCity)",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000",
      "installZsh": false,
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installTools": true
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "os-provided"
    }
  },
  "containerEnv": {
    "PIP_DISABLE_PIP_VERSION_CHECK": "1",
    "PIP_NO_CACHE_DIR": "0",
    "PIP_ROOT_USER_ACTION": "ignore",
    "PYTHONDONTWRITEBYTECODE": "1",
    "PYTHONUNBUFFERED": "1"
  },
  "mounts": [
    "type=cache,target=/home/vscode/.cache/pip",
    "type=bind,source=${localWorkspaceFolder},target=/workspaces/security-core"
  ],
  "workspaceFolder": "/workspaces/security-core",
  "remoteUser": "vscode",
  "runArgs": [
    "--cap-drop=ALL",
    "--security-opt=no-new-privileges:true",
    "--pids-limit=4096",
    "--memory=4g",
    "--cpus=2"
  ],
  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "EditorConfig.EditorConfig",
        "github.vscode-github-actions"
      ],
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "python.analysis.typeCheckingMode": "strict",
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit",
          "source.fixAll.ruff": "explicit"
        },
        "ruff.enable": true,
        "ruff.lint.args": [
          "--select=E,F,I,UP,S,PL",
          "--unsafe-fixes"
        ],
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "terminal.integrated.defaultProfile.linux": "bash",
        "yaml.validate": true,
        "yaml.schemas": {
          "https://json.schemastore.org/github-workflow.json": "/.github/workflows/*.yaml"
        }
      }
    }
  },
  "onCreateCommand": "bash -lc 'printf \"\\n[devcontainer] Bootstrapping security-core...\\n\"'",
  "postCreateCommand": "bash -lc '\npython3 -m venv .venv && \\\nsource .venv/bin/activate && \\\npip install -U pip wheel && \\\npip install -e . && \\\npip install ruff mypy pytest pre-commit && \\\npre-commit install || true\n'",
  "postStartCommand": "bash -lc 'source .venv/bin/activate 2>/dev/null || true; ruff --version && mypy --version && python -V'",
  "forwardPorts": [],
  "shutdownAction": "stopContainer"
}
