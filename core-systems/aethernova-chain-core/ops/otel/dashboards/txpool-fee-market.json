{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "Primary Prometheus datasource",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.x" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "" },
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "" }
  ],
  "uid": "txpool-fee-market",
  "title": "Aethernova: TxPool & Fee Market (EIP-1559)",
  "schemaVersion": 39,
  "version": 1,
  "timezone": "browser",
  "editable": true,
  "refresh": "30s",
  "time": { "from": "now-6h", "to": "now" },
  "timepicker": {
    "hidden": false,
    "refresh_intervals": ["5s","10s","30s","1m","5m","15m","1h"]
  },
  "tags": ["aethernova", "txpool", "fee-market", "eip-1559"],
  "templating": {
    "list": [
      {
        "type": "datasource",
        "name": "DS_PROMETHEUS",
        "label": "Datasource",
        "query": "prometheus",
        "hide": 0,
        "refresh": 1
      },
      {
        "type": "query",
        "name": "job",
        "label": "job",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(up, job)",
        "refresh": 1,
        "includeAll": false
      },
      {
        "type": "query",
        "name": "instance",
        "label": "instance",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(up{job=\"$job\"}, instance)",
        "refresh": 1,
        "includeAll": false
      },
      {
        "type": "constant",
        "name": "base_fee_metric",
        "label": "metric: base fee (wei)",
        "query": "ethereum_base_fee_per_gas_wei"
      },
      {
        "type": "constant",
        "name": "priority_fee_metric",
        "label": "metric: priority fee (wei)",
        "query": "ethereum_priority_fee_suggested_wei"
      },
      {
        "type": "constant",
        "name": "pending_metric",
        "label": "metric: txpool pending",
        "query": "ethereum_mempool_pending_count"
      },
      {
        "type": "constant",
        "name": "queued_metric",
        "label": "metric: txpool queued",
        "query": "ethereum_mempool_queued_count"
      },
      {
        "type": "constant",
        "name": "gas_used_ratio_metric",
        "label": "metric: gas used ratio",
        "query": "ethereum_gas_used_ratio"
      }
    ]
  },
  "annotations": {
    "list": [
      {
        "type": "dashboard",
        "builtIn": 1,
        "name": "Annotations & Alerts",
        "enable": true,
        "hide": false,
        "iconColor": "rgba(0, 211, 255, 1)"
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Base fee (now)",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 6 },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "values": false } },
      "fieldConfig": {
        "defaults": {
          "decimals": 2,
          "unit": "none",
          "displayName": "Gwei"
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "$base_fee_metric{job=\"$job\",instance=\"$instance\"} / 1e9",
          "legendFormat": "basefee_gwei"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Suggested priority fee (now)",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 6 },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "values": false } },
      "fieldConfig": {
        "defaults": {
          "decimals": 2,
          "unit": "none",
          "displayName": "Gwei"
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "$priority_fee_metric{job=\"$job\",instance=\"$instance\"} / 1e9",
          "legendFormat": "priority_gwei"
        }
      ]
    },
    {
      "type": "stat",
      "title": "TxPool pending",
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 6 },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "values": false } },
      "fieldConfig": {
        "defaults": {
          "decimals": 0,
          "unit": "short",
          "displayName": "tx"
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "$pending_metric{job=\"$job\",instance=\"$instance\"}",
          "legendFormat": "pending"
        }
      ]
    },
    {
      "type": "stat",
      "title": "TxPool queued",
      "gridPos": { "x": 18, "y": 0, "w": 6, "h": 6 },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "values": false } },
      "fieldConfig": {
        "defaults": {
          "decimals": 0,
          "unit": "short",
          "displayName": "tx"
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "$queued_metric{job=\"$job\",instance=\"$instance\"}",
          "legendFormat": "queued"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Base fee (Gwei)",
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 8 },
      "fieldConfig": { "defaults": { "unit": "none", "decimals": 2 }, "overrides": [] },
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "$base_fee_metric{job=\"$job\",instance=\"$instance\"} / 1e9",
          "legendFormat": "basefee_gwei"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Gas used ratio (%)",
      "gridPos": { "x": 12, "y": 6, "w": 12, "h": 8 },
      "fieldConfig": { "defaults": { "unit": "percent", "decimals": 1 }, "overrides": [] },
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "$gas_used_ratio_metric{job=\"$job\",instance=\"$instance\"} * 100",
          "legendFormat": "gas_used_ratio_percent"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "TxPool depth: pending vs queued",
      "gridPos": { "x": 0, "y": 14, "w": 24, "h": 10 },
      "fieldConfig": { "defaults": { "unit": "short", "decimals": 0 }, "overrides": [] },
      "options": { "legend": { "displayMode": "table", "placement": "bottom" } },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "$pending_metric{job=\"$job\",instance=\"$instance\"}",
          "legendFormat": "pending"
        },
        {
          "refId": "B",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "$queued_metric{job=\"$job\",instance=\"$instance\"}",
          "legendFormat": "queued"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Suggested priority fee (Gwei)",
      "gridPos": { "x": 0, "y": 24, "w": 24, "h": 8 },
      "fieldConfig": { "defaults": { "unit": "none", "decimals": 2 }, "overrides": [] },
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } },
      "targets": [
        {
          "refId": "A",
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "$priority_fee_metric{job=\"$job\",instance=\"$instance\"} / 1e9",
          "legendFormat": "priority_gwei"
        }
      ]
    }
  ]
}
