{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "type": "row",
      "title": "Сводка",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false,
      "panels": []
    },
    {
      "type": "stat",
      "title": "CPU, % (среднее по узлу)",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 1 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": { "mode": "absolute", "steps": [ { "color": "green" }, { "color": "orange", "value": 75 }, { "color": "red", "value": 90 } ] }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": [ "lastNotNull" ], "fields": "", "values": false },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "100 * (1 - avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\", cluster=~\"$cluster\", job=~\"$job\", instance=~\"$node\"}[5m])))"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Память, % занято",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 1 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": { "mode": "absolute", "steps": [ { "color": "green" }, { "color": "orange", "value": 75 }, { "color": "red", "value": 90 } ] }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": [ "lastNotNull" ], "fields": "", "values": false }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "100 * (1 - (node_memory_MemAvailable_bytes{cluster=~\"$cluster\", job=~\"$job\", instance=~\"$node\"} / node_memory_MemTotal_bytes{cluster=~\"$cluster\", job=~\"$job\", instance=~\"$node\"}))"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Диск, % занято (худший ФС)",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 1 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": { "mode": "absolute", "steps": [ { "color": "green" }, { "color": "orange", "value": 80 }, { "color": "red", "value": 90 } ] }
        },
        "overrides": []
      },
      "options": { "reduceOptions": { "calcs": [ "lastNotNull" ] } },
      "targets": [
        {
          "refId": "A",
          "expr": "max by (instance) (100 * (1 - node_filesystem_avail_bytes{cluster=~\"$cluster\", job=~\"$job\", instance=~\"$node\", fstype!~\"tmpfs|overlay|squashfs|nsfs\", mountpoint!~\"/run.*|/var/lib/docker.*\"} / node_filesystem_size_bytes{cluster=~\"$cluster\", job=~\"$job\", instance=~\"$node\", fstype!~\"tmpfs|overlay|squashfs|nsfs\", mountpoint!~\"/run.*|/var/lib/docker.*\"}))"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Аптайм, дни",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 1 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": { "defaults": { "unit": "d" }, "overrides": [] },
      "options": { "reduceOptions": { "calcs": [ "lastNotNull" ] } },
      "targets": [
        {
          "refId": "A",
          "expr": "(time() - node_boot_time_seconds{cluster=~\"$cluster\", job=~\"$job\", instance=~\"$node\"}) / 86400"
        }
      ]
    },

    {
      "type": "row",
      "title": "CPU",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "collapsed": false,
      "panels": []
    },
    {
      "type": "timeseries",
      "title": "CPU usage, % (за 5m)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "options": { "legend": { "displayMode": "table", "placement": "right" }, "tooltip": { "mode": "single" } },
      "targets": [
        {
          "refId": "A",
          "legendFormat": "{{instance}}",
          "expr": "100 * (1 - avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\", cluster=~\"$cluster\", job=~\"$job\", instance=~\"$node\"}[5m])))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "CPU по режимам (stacked, % от суммарного)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": { "defaults": { "unit": "percentunit" }, "overrides": [] },
      "options": { "legend": { "displayMode": "list", "placement": "right" }, "tooltip": { "mode": "multi" }, "stacking": { "mode": "normal", "group": "A" } },
      "targets": [
        {
          "refId": "A",
          "expr": "100 * sum by (mode,instance) (rate(node_cpu_seconds_total{mode!~\"idle|guest|guest_nice\", cluster=~\"$cluster\", job=~\"$job\", instance=~\"$node\"}[5m])) / sum by (instance) (rate(node_cpu_seconds_total{cluster=~\"$cluster\", job=~\"$job\", instance=~\"$node\"}[5m]))",
          "legendFormat": "{{mode}}"
        }
      ]
    },

    {
      "type": "row",
      "title": "Память",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "collapsed": false,
      "panels": []
    },
    {
      "type": "timeseries",
      "title": "Память: занято vs доступно (bytes)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 15 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": { "defaults": { "unit": "bytes" }, "overrides": [] },
      "options": { "legend": { "displayMode": "list", "placement": "right" }, "tooltip": { "mode": "multi" }, "stacking": { "mode": "normal" } },
      "targets": [
        { "refId": "A", "expr": "node_memory_MemTotal_bytes{cluster=~\"$cluster\", job=~\"$job\", instance=~\"$node\"}", "legendFormat": "total" },
        { "refId": "B", "expr": "node_memory_MemTotal_bytes{cluster=~\"$cluster\", job=~\"$job\", instance=~\"$node\"} - node_memory_MemAvailable_bytes{cluster=~\"$cluster\", job=~\"$job\", instance=~\"$node\"}", "legendFormat": "used" },
        { "refId": "C", "expr": "node_memory_MemAvailable_bytes{cluster=~\"$cluster\", job=~\"$job\", instance=~\"$node\"}", "legendFormat": "available" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Load average (1/5/15)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 15 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": { "defaults": { "unit": "short" }, "overrides": [] },
      "options": { "legend": { "displayMode": "list", "placement": "right" } },
      "targets": [
        { "refId": "A", "expr": "node_load1{cluster=~\"$cluster\", job=~\"$job\", instance=~\"$node\"}", "legendFormat": "load1" },
        { "refId": "B", "expr": "node_load5{cluster=~\"$cluster\", job=~\"$job\", instance=~\"$node\"}", "legendFormat": "load5" },
        { "refId": "C", "expr": "node_load15{cluster=~\"$cluster\", job=~\"$job\", instance=~\"$node\"}", "legendFormat": "load15" }
      ]
    },

    {
      "type": "row",
      "title": "Сеть и диски",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 23 },
      "collapsed": false,
      "panels": []
    },
    {
      "type": "timeseries",
      "title": "Сеть: RX/TX (bytes/s)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": { "defaults": { "unit": "Bps" }, "overrides": [] },
      "options": { "legend": { "displayMode": "list", "placement": "right" }, "tooltip": { "mode": "multi" } },
      "targets": [
        { "refId": "A", "expr": "sum by (instance) (rate(node_network_receive_bytes_total{cluster=~\"$cluster\", job=~\"$job\", instance=~\"$node\", device!~\"lo|docker.*|veth.*\"}[5m]))", "legendFormat": "rx {{instance}}" },
        { "refId": "B", "expr": "sum by (instance) (rate(node_network_transmit_bytes_total{cluster=~\"$cluster\", job=~\"$job\", instance=~\"$node\", device!~\"lo|docker.*|veth.*\"}[5m]))", "legendFormat": "tx {{instance}}" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Диск: Read/Write (bytes/s)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": { "defaults": { "unit": "Bps" }, "overrides": [] },
      "options": { "legend": { "displayMode": "list", "placement": "right" }, "tooltip": { "mode": "multi" } },
      "targets": [
        { "refId": "A", "expr": "sum by (instance) (rate(node_disk_read_bytes_total{cluster=~\"$cluster\", job=~\"$job\", instance=~\"$node\", device!~\"loop.*|ram.*\"}[5m]))", "legendFormat": "read {{instance}}" },
        { "refId": "B", "expr": "sum by (instance) (rate(node_disk_written_bytes_total{cluster=~\"$cluster\", job=~\"$job\", instance=~\"$node\", device!~\"loop.*|ram.*\"}[5m]))", "legendFormat": "write {{instance}}" }
      ]
    },

    {
      "type": "row",
      "title": "Файловые системы",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 32 },
      "collapsed": false,
      "panels": []
    },
    {
      "type": "timeseries",
      "title": "Топ-5 заполненных ФС, % занято",
      "gridPos": { "h": 9, "w": 24, "x": 0, "y": 33 },
      "datasource": { "uid": "${datasource}" },
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "options": { "legend": { "displayMode": "table", "placement": "right" }, "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(5, 100 * (1 - node_filesystem_avail_bytes{cluster=~\"$cluster\", job=~\"$job\", instance=~\"$node\", fstype!~\"tmpfs|overlay|squashfs|nsfs\", mountpoint!~\"/run.*|/var/lib/docker.*\"} / node_filesystem_size_bytes{cluster=~\"$cluster\", job=~\"$job\", instance=~\"$node\", fstype!~\"tmpfs|overlay|squashfs|nsfs\", mountpoint!~\"/run.*|/var/lib/docker.*\"}))",
          "legendFormat": "{{instance}} {{mountpoint}}"
        }
      ]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "style": "dark",
  "tags": [ "aethernova", "node", "otel", "prometheus" ],
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "label": "Prometheus",
        "query": "prometheus",
        "refresh": 1,
        "current": {}
      },
      {
        "name": "cluster",
        "type": "query",
        "label": "cluster",
        "datasource": { "uid": "${datasource}" },
        "query": "label_values(up, cluster)",
        "refresh": 1,
        "includeAll": true,
        "allValue": ".*",
        "multi": false,
        "current": {}
      },
      {
        "name": "job",
        "type": "query",
        "label": "job",
        "datasource": { "uid": "${datasource}" },
        "query": "label_values(node_cpu_seconds_total, job)",
        "refresh": 1,
        "includeAll": true,
        "allValue": ".*",
        "multi": false,
        "current": {}
      },
      {
        "name": "node",
        "type": "query",
        "label": "node (instance)",
        "datasource": { "uid": "${datasource}" },
        "query": "label_values(node_cpu_seconds_total{cluster=~\"$cluster\", job=~\"$job\"}, instance)",
        "refresh": 1,
        "includeAll": true,
        "allValue": ".*",
        "multi": true,
        "current": {}
      }
    ]
  },
  "time": { "from": "now-6h", "to": "now" },
  "timezone": "",
  "title": "Aethernova — Node Overview (Prometheus/node_exporter)",
  "uid": "aethernova-node-overview",
  "version": 1,
  "weekStart": ""
}
