############################################################
# ECR — versions.tf (industrial-grade)
############################################################

terraform {
  # Зафиксируйте требуемую версию Terraform CLI.
  # Диапазон совместим с текущей стабильной веткой 1.x.
  required_version = ">= 1.6.0, < 2.0.0"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      # Пиннинг на актуальную мажорную ветку v6 провайдера AWS.
      # Обеспечивает доступность ресурсов ECR и стабильность API.
      version = ">= 6.0.0, < 7.0.0"
    }
  }
}
