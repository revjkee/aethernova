{
  "id": null,
  "uid": "k8s-workloads-overview",
  "title": "K8s Workloads â€” Deployments / StatefulSets / DaemonSets",
  "tags": ["kubernetes", "workloads", "kube-state-metrics", "production"],
  "schemaVersion": 39,
  "version": 1,
  "timezone": "browser",
  "refresh": "30s",
  "editable": true,
  "time": { "from": "now-6h", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "label": "Prometheus",
        "refresh": 1
      },
      {
        "name": "job",
        "type": "query",
        "label": "job (kube-state-metrics)",
        "datasource": "${datasource}",
        "query": "label_values(kube_deployment_spec_replicas, job)",
        "refresh": 2,
        "current": { "text": "kube-state-metrics", "value": "kube-state-metrics" }
      },
      {
        "name": "namespace",
        "type": "query",
        "label": "namespace",
        "datasource": "${datasource}",
        "query": "label_values(kube_deployment_spec_replicas{job=\"$job\"}, namespace)",
        "refresh": 2,
        "includeAll": true,
        "multi": true
      },
      {
        "name": "deployment",
        "type": "query",
        "label": "deployment",
        "datasource": "${datasource}",
        "query": "label_values(kube_deployment_spec_replicas{job=\"$job\",namespace=~\"$namespace\"}, deployment)",
        "refresh": 2,
        "includeAll": true,
        "multi": true
      },
      {
        "name": "statefulset",
        "type": "query",
        "label": "statefulset",
        "datasource": "${datasource}",
        "query": "label_values(kube_statefulset_replicas{job=\"$job\",namespace=~\"$namespace\"}, statefulset)",
        "refresh": 2,
        "includeAll": true,
        "multi": true
      },
      {
        "name": "daemonset",
        "type": "query",
        "label": "daemonset",
        "datasource": "${datasource}",
        "query": "label_values(kube_daemonset_status_desired_number_scheduled{job=\"$job\",namespace=~\"$namespace\"}, daemonset)",
        "refresh": 2,
        "includeAll": true,
        "multi": true
      }
    ]
  },
  "panels": [
    {
      "id": 10,
      "type": "stat",
      "title": "Deployments with missing replicas",
      "datasource": "${datasource}",
      "fieldConfig": { "defaults": { "unit": "short" }, "overrides": [] },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "orientation": "horizontal", "colorMode": "value", "graphMode": "none", "justifyMode": "auto" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum((kube_deployment_spec_replicas{job=\"$job\",namespace=~\"$namespace\",deployment=~\"$deployment\"} - on(namespace, deployment) kube_deployment_status_replicas_available{job=\"$job\",namespace=~\"$namespace\",deployment=~\"$deployment\"}) > 0)"
        }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 }
    },
    {
      "id": 11,
      "type": "stat",
      "title": "StatefulSets under target",
      "datasource": "${datasource}",
      "fieldConfig": { "defaults": { "unit": "short" }, "overrides": [] },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [
        {
          "refId": "A",
          "expr": "sum((kube_statefulset_replicas{job=\"$job\",namespace=~\"$namespace\",statefulset=~\"$statefulset\"} - on(namespace, statefulset) kube_statefulset_status_replicas_ready{job=\"$job\",namespace=~\"$namespace\",statefulset=~\"$statefulset\"}) > 0)"
        }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 }
    },
    {
      "id": 12,
      "type": "stat",
      "title": "DaemonSet unavailable pods",
      "datasource": "${datasource}",
      "fieldConfig": { "defaults": { "unit": "short" } },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(kube_daemonset_status_desired_number_scheduled{job=\"$job\",namespace=~\"$namespace\",daemonset=~\"$daemonset\"} - on(namespace, daemonset) kube_daemonset_status_number_available{job=\"$job\",namespace=~\"$namespace\",daemonset=~\"$daemonset\"})"
        }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 }
    },
    {
      "id": 13,
      "type": "stat",
      "title": "Container restarts rate (req/s)",
      "datasource": "${datasource}",
      "fieldConfig": { "defaults": { "unit": "req/s" } },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(kube_pod_container_status_restarts_total{namespace=~\"$namespace\"}[$__rate_interval]))"
        }
      ],
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 }
    },

    {
      "id": 20,
      "type": "timeseries",
      "title": "Deployment availability ratio (available/desired) by deployment",
      "datasource": "${datasource}",
      "fieldConfig": { "defaults": { "unit": "percentunit" } },
      "options": { "legend": { "showLegend": true }, "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (deployment) (kube_deployment_status_replicas_available{job=\"$job\",namespace=~\"$namespace\",deployment=~\"$deployment\"}) / sum by (deployment) (kube_deployment_spec_replicas{job=\"$job\",namespace=~\"$namespace\",deployment=~\"$deployment\"})"
        }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 4 }
    },

    {
      "id": 21,
      "type": "timeseries",
      "title": "StatefulSet readiness ratio (ready/desired) by statefulset",
      "datasource": "${datasource}",
      "fieldConfig": { "defaults": { "unit": "percentunit" } },
      "options": { "legend": { "showLegend": true } },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (statefulset) (kube_statefulset_status_replicas_ready{job=\"$job\",namespace=~\"$namespace\",statefulset=~\"$statefulset\"}) / sum by (statefulset) (kube_statefulset_replicas{job=\"$job\",namespace=~\"$namespace\",statefulset=~\"$statefulset\"})"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 }
    },

    {
      "id": 22,
      "type": "timeseries",
      "title": "DaemonSet availability ratio (available/desired) by daemonset",
      "datasource": "${datasource}",
      "fieldConfig": { "defaults": { "unit": "percentunit" } },
      "options": { "legend": { "showLegend": true } },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (daemonset) (kube_daemonset_status_number_available{job=\"$job\",namespace=~\"$namespace\",daemonset=~\"$daemonset\"}) / sum by (daemonset) (kube_daemonset_status_desired_number_scheduled{job=\"$job\",namespace=~\"$namespace\",daemonset=~\"$daemonset\"})"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 }
    },

    {
      "id": 30,
      "type": "table",
      "title": "Under-replicated Deployments (desired vs available)",
      "datasource": "${datasource}",
      "options": { "showHeader": true },
      "targets": [
        {
          "refId": "A",
          "expr": "max by (namespace, deployment) (kube_deployment_spec_replicas{job=\"$job\",namespace=~\"$namespace\",deployment=~\"$deployment\"})"
        },
        {
          "refId": "B",
          "expr": "max by (namespace, deployment) (kube_deployment_status_replicas_available{job=\"$job\",namespace=~\"$namespace\",deployment=~\"$deployment\"})"
        },
        {
          "refId": "C",
          "expr": "(max by (namespace, deployment) (kube_deployment_spec_replicas{job=\"$job\",namespace=~\"$namespace\",deployment=~\"$deployment\"}) - on(namespace, deployment) max by (namespace, deployment) (kube_deployment_status_replicas_available{job=\"$job\",namespace=~\"$namespace\",deployment=~\"$deployment\"})) > 0"
        }
      ],
      "transformations": [
        { "id": "merge", "options": {} },
        { "id": "filterByValue", "options": { "match": "C", "value": 1, "operator": "gt" } },
        { "id": "organize", "options": { "renameByName": { "A": "desired", "B": "available", "C": "missing_flag" } } }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 20 }
    },

    {
      "id": 31,
      "type": "table",
      "title": "Under-replicated StatefulSets (desired vs ready)",
      "datasource": "${datasource}",
      "options": { "showHeader": true },
      "targets": [
        { "refId": "A", "expr": "max by (namespace, statefulset) (kube_statefulset_replicas{job=\"$job\",namespace=~\"$namespace\",statefulset=~\"$statefulset\"})" },
        { "refId": "B", "expr": "max by (namespace, statefulset) (kube_statefulset_status_replicas_ready{job=\"$job\",namespace=~\"$namespace\",statefulset=~\"$statefulset\"})" },
        { "refId": "C", "expr": "(max by (namespace, statefulset) (kube_statefulset_replicas{job=\"$job\",namespace=~\"$namespace\",statefulset=~\"$statefulset\"}) - on(namespace, statefulset) max by (namespace, statefulset) (kube_statefulset_status_replicas_ready{job=\"$job\",namespace=~\"$namespace\",statefulset=~\"$statefulset\"})) > 0" }
      ],
      "transformations": [
        { "id": "merge", "options": {} },
        { "id": "filterByValue", "options": { "match": "C", "value": 1, "operator": "gt" } },
        { "id": "organize", "options": { "renameByName": { "A": "desired", "B": "ready", "C": "missing_flag" } } }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 28 }
    },

    {
      "id": 32,
      "type": "table",
      "title": "DaemonSets (desired vs available, unavailable)",
      "datasource": "${datasource}",
      "options": { "showHeader": true },
      "targets": [
        { "refId": "A", "expr": "max by (namespace, daemonset) (kube_daemonset_status_desired_number_scheduled{job=\"$job\",namespace=~\"$namespace\",daemonset=~\"$daemonset\"})" },
        { "refId": "B", "expr": "max by (namespace, daemonset) (kube_daemonset_status_number_available{job=\"$job\",namespace=~\"$namespace\",daemonset=~\"$daemonset\"})" },
        { "refId": "C", "expr": "max by (namespace, daemonset) (kube_daemonset_status_desired_number_scheduled{job=\"$job\",namespace=~\"$namespace\",daemonset=~\"$daemonset\"}) - on(namespace, daemonset) max by (namespace, daemonset) (kube_daemonset_status_number_available{job=\"$job\",namespace=~\"$namespace\",daemonset=~\"$daemonset\"})" }
      ],
      "transformations": [
        { "id": "merge", "options": {} },
        { "id": "organize", "options": { "renameByName": { "A": "desired", "B": "available", "C": "unavailable" } } }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 28 }
    },

    {
      "id": 40,
      "type": "timeseries",
      "title": "Container restarts rate by namespace",
      "datasource": "${datasource}",
      "fieldConfig": { "defaults": { "unit": "req/s" } },
      "options": { "legend": { "showLegend": true } },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (namespace) (rate(kube_pod_container_status_restarts_total{namespace=~\"$namespace\"}[$__rate_interval]))"
        }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 36 }
    },

    {
      "id": 41,
      "type": "table",
      "title": "Top pods by restart rate",
      "datasource": "${datasource}",
      "options": { "showHeader": true },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(20, rate(kube_pod_container_status_restarts_total{namespace=~\"$namespace\"}[$__rate_interval]))"
        }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 44 }
    }
  ]
}
