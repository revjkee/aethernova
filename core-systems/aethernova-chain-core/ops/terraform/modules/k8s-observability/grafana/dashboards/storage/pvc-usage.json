{
  "uid": "pvc-usage",
  "title": "PVC Usage Overview",
  "tags": ["kubernetes", "storage", "pvc", "prometheus"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": { "from": "now-6h", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "DS_PROMETHEUS",
        "type": "datasource",
        "query": "prometheus",
        "current": { "selected": true }
      },
      {
        "name": "namespace",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(kubelet_volume_stats_capacity_bytes, namespace)",
        "refresh": 1,
        "includeAll": true,
        "multi": true
      },
      {
        "name": "pvc",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(kubelet_volume_stats_capacity_bytes{namespace=~\"$namespace\"}, persistentvolumeclaim)",
        "refresh": 1,
        "includeAll": true,
        "multi": true
      },
      {
        "name": "topn",
        "type": "custom",
        "query": "5,10,20",
        "current": { "text": "10", "value": "10" }
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Cluster PVC usage (%)",
      "description": "Суммарный процент использования PVC по выбранным namespace/PVC",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "instant": true,
          "expr": "100 * sum(kubelet_volume_stats_used_bytes{namespace=~\"$namespace\", persistentvolumeclaim=~\"$pvc\"}) / sum(kubelet_volume_stats_capacity_bytes{namespace=~\"$namespace\", persistentvolumeclaim=~\"$pvc\"})"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["last"], "fields": "", "values": false },
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "orientation": "auto"
      }
    },
    {
      "type": "timeseries",
      "title": "Total PVC used (GiB)",
      "description": "Суммарно использовано по выбранным namespace/PVC",
      "gridPos": { "x": 6, "y": 0, "w": 18, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(kubelet_volume_stats_used_bytes{namespace=~\"$namespace\", persistentvolumeclaim=~\"$pvc\"}) / 1024 / 1024 / 1024",
          "legendFormat": "used GiB"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "decgbytes" }, "overrides": [] }
    },
    {
      "type": "bargauge",
      "title": "Top-$topn PVC by % used",
      "description": "Наиболее заполненные PVC (instant, topk)",
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "instant": true,
          "expr": "topk($topn, 100 * kubelet_volume_stats_used_bytes{namespace=~\"$namespace\", persistentvolumeclaim=~\"$pvc\"} / kubelet_volume_stats_capacity_bytes{namespace=~\"$namespace\", persistentvolumeclaim=~\"$pvc\"})",
          "legendFormat": "{{namespace}}/{{persistentvolumeclaim}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "table",
      "title": "PVC usage table",
      "description": "Таблица: namespace, pvc, storageclass, used/capacity/available, % used",
      "gridPos": { "x": 12, "y": 6, "w": 12, "h": 16 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "transformations": [
        { "id": "merge" },
        { "id": "organize", "options": { "excludeByName": {}, "indexByName": {}, "renameByName": {} } }
      ],
      "targets": [
        {
          "refId": "PCT",
          "instant": true,
          "legendFormat": "{{namespace}}/{{persistentvolumeclaim}}",
          "expr": "(100 * kubelet_volume_stats_used_bytes{namespace=~\"$namespace\", persistentvolumeclaim=~\"$pvc\"} / kubelet_volume_stats_capacity_bytes{namespace=~\"$namespace\", persistentvolumeclaim=~\"$pvc\"}) * on(namespace,persistentvolumeclaim) group_left(storageclass) kube_persistentvolumeclaim_info{namespace=~\"$namespace\", persistentvolumeclaim=~\"$pvc\"}"
        },
        {
          "refId": "USED",
          "instant": true,
          "legendFormat": "used GiB",
          "expr": "(kubelet_volume_stats_used_bytes{namespace=~\"$namespace\", persistentvolumeclaim=~\"$pvc\"} / 1024 / 1024 / 1024) * on(namespace,persistentvolumeclaim) group_left(storageclass) kube_persistentvolumeclaim_info{namespace=~\"$namespace\", persistentvolumeclaim=~\"$pvc\"}"
        },
        {
          "refId": "CAP",
          "instant": true,
          "legendFormat": "capacity GiB",
          "expr": "(kubelet_volume_stats_capacity_bytes{namespace=~\"$namespace\", persistentvolumeclaim=~\"$pvc\"} / 1024 / 1024 / 1024) * on(namespace,persistentvolumeclaim) group_left(storageclass) kube_persistentvolumeclaim_info{namespace=~\"$namespace\", persistentvolumeclaim=~\"$pvc\"}"
        },
        {
          "refId": "AVAIL",
          "instant": true,
          "legendFormat": "available GiB",
          "expr": "(kubelet_volume_stats_available_bytes{namespace=~\"$namespace\", persistentvolumeclaim=~\"$pvc\"} / 1024 / 1024 / 1024) * on(namespace,persistentvolumeclaim) group_left(storageclass) kube_persistentvolumeclaim_info{namespace=~\"$namespace\", persistentvolumeclaim=~\"$pvc\"}"
        }
      ],
      "fieldConfig": {
        "defaults": { "custom": { "displayMode": "auto", "filterable": true } },
        "overrides": [
          { "matcher": { "id": "byName", "options": "Value" }, "properties": [{ "id": "custom.align", "value": "right" }] },
          { "matcher": { "id": "byName", "options": "PCT" }, "properties": [{ "id": "unit", "value": "percent" }] },
          { "matcher": { "id": "byName", "options": "USED" }, "properties": [{ "id": "unit", "value": "decgbytes" }] },
          { "matcher": { "id": "byName", "options": "CAP" }, "properties": [{ "id": "unit", "value": "decgbytes" }] },
          { "matcher": { "id": "byName", "options": "AVAIL" }, "properties": [{ "id": "unit", "value": "decgbytes" }] }
        ]
      },
      "options": { "showHeader": true, "cellHeight": "sm" }
    }
  ]
}
