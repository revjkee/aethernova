{
  "uid": "txpool-overview",
  "title": "TxPool Overview (Nethermind/Prometheus)",
  "tags": ["txpool", "mempool", "nethermind", "prometheus", "ethereum"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": { "from": "now-6h", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "DS_PROMETHEUS",
        "type": "datasource",
        "query": "prometheus",
        "current": { "selected": true }
      },
      {
        "name": "job",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(nethermind_transaction_count, job)",
        "refresh": 1,
        "includeAll": false
      },
      {
        "name": "instance",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "query": "label_values(nethermind_transaction_count{job=\"$job\"}, instance)",
        "refresh": 1,
        "includeAll": true,
        "multi": true
      },
      {
        "name": "rate_window",
        "type": "custom",
        "query": "5m,15m,1h",
        "current": { "text": "5m", "value": "5m" }
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "TxPool Size (transactions in pool)",
      "description": "Текущее число транзакций в пуле",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "nethermind_transaction_count{job=\"$job\", instance=~\"$instance\"}",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5000 },
              { "color": "red", "value": 20000 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["last"], "fields": "", "values": false },
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "orientation": "auto"
      }
    },
    {
      "type": "timeseries",
      "title": "Ingress vs Egress (tx/s)",
      "description": "Скорости входящего/исходящего трафика транзакций в txpool",
      "gridPos": { "x": 6, "y": 0, "w": 18, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "legendFormat": "received",
          "expr": "sum by (instance) (rate(nethermind_pending_transactions_received{job=\"$job\", instance=~\"$instance\"}[$rate_window]))"
        },
        {
          "refId": "B",
          "legendFormat": "sent",
          "expr": "sum by (instance) (rate(nethermind_pending_transactions_sent{job=\"$job\", instance=~\"$instance\"}[$rate_window]))"
        },
        {
          "refId": "C",
          "legendFormat": "sourced_from_mempool (egress to blocks/private OF)",
          "expr": "sum by (instance) (rate(nethermind_transactions_sourced_mem_pool{job=\"$job\", instance=~\"$instance\"}[$rate_window]))"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] }
    },
    {
      "type": "timeseries",
      "title": "Rejections & Evictions (tx/s)",
      "description": "Причины отказов/исключений транзакций (rate по счётчикам)",
      "gridPos": { "x": 0, "y": 6, "w": 18, "h": 10 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "legendFormat": "evicted",
          "expr": "sum by (instance) (rate(nethermind_pending_transactions_evicted{job=\"$job\", instance=~\"$instance\"}[$rate_window]))"
        },
        {
          "refId": "B",
          "legendFormat": "too_low_fee",
          "expr": "sum by (instance) (rate(nethermind_pending_transactions_too_low_fee{job=\"$job\", instance=~\"$instance\"}[$rate_window]))"
        },
        {
          "refId": "C",
          "legendFormat": "too_low_priority_fee",
          "expr": "sum by (instance) (rate(nethermind_pending_transactions_too_low_priority_fee{job=\"$job\", instance=~\"$instance\"}[$rate_window]))"
        },
        {
          "refId": "D",
          "legendFormat": "nonce_gap",
          "expr": "sum by (instance) (rate(nethermind_pending_transactions_nonce_gap{job=\"$job\", instance=~\"$instance\"}[$rate_window]))"
        },
        {
          "refId": "E",
          "legendFormat": "low_nonce",
          "expr": "sum by (instance) (rate(nethermind_pending_transactions_low_nonce{job=\"$job\", instance=~\"$instance\"}[$rate_window]))"
        },
        {
          "refId": "F",
          "legendFormat": "discarded",
          "expr": "sum by (instance) (rate(nethermind_pending_transactions_discarded{job=\"$job\", instance=~\"$instance\"}[$rate_window]))"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] }
    },
    {
      "type": "bargauge",
      "title": "Backlog (TxPool Size Gauge)",
      "description": "Индикатор размера пула (оценка нагрузки)",
      "gridPos": { "x": 18, "y": 8, "w": 6, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "max(nethermind_transaction_count{job=\"$job\", instance=~\"$instance\"})"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5000 },
              { "color": "red", "value": 20000 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "table",
      "title": "Top-K rejection reasons (by tx/s)",
      "description": "Топ причин отказов за окно $rate_window",
      "gridPos": { "x": 0, "y": 16, "w": 24, "h": 10 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "transformations": [
        { "id": "merge" },
        { "id": "reduce", "options": { "reducers": ["lastNotNull"], "labelsToFields": true } }
      ],
      "targets": [
        {
          "refId": "A",
          "legendFormat": "too_low_fee",
          "expr": "topk(10, sum by (reason) (rate(nethermind_pending_transactions_too_low_fee{job=\"$job\", instance=~\"$instance\"}[$rate_window])))"
        },
        {
          "refId": "B",
          "legendFormat": "too_low_priority_fee",
          "expr": "topk(10, sum by (reason) (rate(nethermind_pending_transactions_too_low_priority_fee{job=\"$job\", instance=~\"$instance\"}[$rate_window])))"
        },
        {
          "refId": "C",
          "legendFormat": "nonce_gap",
          "expr": "topk(10, sum by (reason) (rate(nethermind_pending_transactions_nonce_gap{job=\"$job\", instance=~\"$instance\"}[$rate_window])))"
        },
        {
          "refId": "D",
          "legendFormat": "low_nonce",
          "expr": "topk(10, sum by (reason) (rate(nethermind_pending_transactions_low_nonce{job=\"$job\", instance=~\"$instance\"}[$rate_window])))"
        },
        {
          "refId": "E",
          "legendFormat": "discarded",
          "expr": "topk(10, sum by (reason) (rate(nethermind_pending_transactions_discarded{job=\"$job\", instance=~\"$instance\"}[$rate_window])))"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "ops", "custom": { "displayMode": "auto", "filterable": true } },
        "overrides": []
      },
      "options": { "showHeader": true, "cellHeight": "sm" }
    },
    {
      "type": "text",
      "title": "Note on Tx Age",
      "gridPos": { "x": 0, "y": 26, "w": 24, "h": 4 },
      "options": {
        "mode": "markdown",
        "content": "Возраст транзакций в txpool не отображается: стандартных метрик возраста в публичной документации клиентов не найдено. Не могу подтвердить это."
      }
    }
  ]
}
