{
  "$schema": "https://grafana.com/schemas/panel/v1.json",
  "type": "stat",
  "title": "Uptime",
  "description": "System uptime (seconds). Uses node_exporter for Linux and windows_exporter for Windows. Picked by OR expression.",
  "transparent": true,
  "datasource": {
    "type": "prometheus",
    "uid": "${DS_PROMETHEUS_UID}"
  },
  "targets": [
    {
      "refId": "A",
      "editorMode": "code",
      "instant": true,
      "legendFormat": "",
      "range": false,
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS_UID}"
      },
      "expr": "(time() - node_boot_time_seconds{job=~\"${node_job:node-exporter}\", instance=~\"${node:.*}\"})\n  or windows_system_system_up_time{job=~\"${windows_job:windows-exporter}\", instance=~\"${node:.*}\"}"
    }
  ],
  "options": {
    "colorMode": "value",
    "graphMode": "none",
    "justifyMode": "auto",
    "orientation": "auto",
    "textMode": "auto",
    "reduceOptions": {
      "calcs": [
        "lastNotNull"
      ],
      "fields": "",
      "values": false
    },
    "noValue": "N/A"
  },
  "fieldConfig": {
    "defaults": {
      "unit": "s",
      "decimals": 0,
      "mappings": [
        {
          "type": "special",
          "options": {
            "match": "null",
            "result": {
              "text": "N/A"
            }
          }
        }
      ],
      "thresholds": {
        "mode": "absolute",
        "steps": [
          {
            "color": "red",
            "value": null
          },
          {
            "color": "yellow",
            "value": 600
          },
          {
            "color": "green",
            "value": 3600
          }
        ]
      }
    },
    "overrides": []
  },
  "links": [],
  "pluginVersion": ""
}
