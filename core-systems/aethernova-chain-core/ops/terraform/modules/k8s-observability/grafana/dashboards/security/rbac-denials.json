      "targets": [
        {
          "refId": "A",
          "range": true,
          "expr": "sum_over_time(sum(rate(${denied_metric}{job=~\"$job\", ${namespace_label}=~\"$namespace\"$extra_label_filters}[1m]))[$__interval:1m])"
