      "fieldConfig": { "defaults": { "unit": "short" } },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [
        { "refId": "A", "range": true, "expr": "count(sum by (${namespace_label}) (rate(${denied_metric}{job=~\"$job\", ${namespace_label}=~\"$namespace\"$extra_label_filters}[$__rate_interval])))" }
      ]
    },

