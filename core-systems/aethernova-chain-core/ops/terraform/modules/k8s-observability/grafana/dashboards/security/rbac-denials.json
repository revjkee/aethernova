  "panels": [
    {
      "type": "stat",
      "title": "Denied RPS (total)",
      "id": 1,
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "Скорость отказов авторизации (в секунду).",
      "fieldConfig": { "defaults": { "unit": "ops", "decimals": 2, "color": { "mode": "thresholds" }, "thresholds": { "mode": "absolute", "steps": [ { "color": "green" }, { "color": "orange", "value": 0.1 }, { "color": "red", "value": 1 } ] } } },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "auto", "colorMode": "value", "graphMode": "none", "justifyMode": "auto" },
      "targets": [
        { "refId": "A", "range": true, "expr": "sum(rate(${denied_metric}{job=~\"$job\", ${namespace_label}=~\"$namespace\"$extra_label_filters}[$__rate_interval]))" }
      ]
    },
    {
      "type": "stat",
      "title": "403 Share (%)",
      "id": 2,
      "gridPos": { "h": 5, "w": 6, "x": 6, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "Доля ответов 403 среди всех запросов API.",
      "fieldConfig": { "defaults": { "unit": "percentunit", "decimals": 2, "color": { "mode": "thresholds" }, "thresholds": { "mode": "absolute", "steps": [ { "color": "green" }, { "color": "orange", "value": 0.01 }, { "color": "red", "value": 0.05 } ] } } },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [
        {
          "refId": "A",
          "range": true,
          "expr": "100 * (sum(rate(${req_total_metric}{job=~\"$job\", ${namespace_label}=~\"$namespace\", code=\"Forbidden\"$extra_label_filters}[$__rate_interval])) / sum(rate(${req_total_metric}{job=~\"$job\", ${namespace_label}=~\"$namespace\"$extra_label_filters}[$__rate_interval])))"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Unique users (last interval)",
      "id": 3,
      "gridPos": { "h": 5, "w": 6, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "Число уникальных пользователей с отказами за текущий интервал.",
      "fieldConfig": { "defaults": { "unit": "short" } },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [
        {
          "refId": "A",
          "range": true,
          "expr": "count(sum by (${user_label}) (rate(${denied_metric}{job=~\"$job\", ${namespace_label}=~\"$namespace\"$extra_label_filters}[$__rate_interval])))"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Unique namespaces (last interval)",
      "id": 4,
      "gridPos": { "h": 5, "w": 6, "x": 18, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
