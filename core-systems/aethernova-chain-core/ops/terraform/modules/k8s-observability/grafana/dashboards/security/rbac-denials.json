      "id": 30,
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 23 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "description": "Плотность отказов по времени (агрегация по минутам).",
      "fieldConfig": { "defaults": { "unit": "ops" } },
      "options": {
        "legend": { "showLegend": false },
        "tooltip": { "mode": "single" },
        "yAxis": { "axisLabel": "Denials/min", "scale": "linear" },
        "heatmap": { "colorScale": "sqrt", "exponent": 0.5 }
