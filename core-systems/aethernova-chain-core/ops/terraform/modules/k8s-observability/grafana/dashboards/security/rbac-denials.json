      "options": { "showHeader": true, "sortBy": [{ "displayName": "rps", "desc": true }] },
      "fieldConfig": {
        "defaults": { "mappings": [] },
        "overrides": [
          { "matcher": { "id": "byName", "options": "rps" }, "properties": [{ "id": "unit", "value": "ops" }] }
        ]
      },
      "transformations": [
        { "id": "labelsToFields", "options": { "mode": "columns" } },
        {
          "id": "organize",
          "options": {
            "excludeByName": { "Time": true },
            "renameByName": {
              "${user_label}": "user",
              "${verb_label}": "verb",
              "${resource_label}": "resource",
              "Value": "rps"
            }
          }
        }
      ],
      "targets": [
        {
          "refId": "A",
          "instant": true,
          "format": "table",
          "editorMode": "code",
