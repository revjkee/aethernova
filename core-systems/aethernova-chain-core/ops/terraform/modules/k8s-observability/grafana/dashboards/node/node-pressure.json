{
  "id": null,
  "uid": null,
  "title": "Node Pressure and CPU Throttling",
  "tags": ["node", "psi", "pressure", "throttling", "linux", "cadvisor", "prometheus"],
  "timezone": "",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": { "from": "now-6h", "to": "now" },
  "timepicker": {
    "refresh_intervals": ["5s","10s","15s","30s","1m","5m","10m","15m","30m","1h"],
    "time_options": ["15m","1h","6h","12h","24h","2d","7d","30d"]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "links": [],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "enable": true,
        "hide": false,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": {},
        "hide": 0,
        "label": "Prometheus",
        "refresh": 1
      },
      {
        "name": "job_nodeexporter",
        "type": "query",
        "datasource": "${datasource}",
        "refresh": 2,
        "query": "label_values(node_exporter_build_info, job)",
        "includeAll": false,
        "multi": false,
        "label": "job (node_exporter)",
        "current": {}
      },
      {
        "name": "job_cadvisor",
        "type": "query",
        "datasource": "${datasource}",
        "refresh": 2,
        "query": "label_values(container_cpu_usage_seconds_total{container!=\"\"}, job)",
        "includeAll": false,
        "multi": false,
        "label": "job (cAdvisor/kubelet)",
        "current": {}
      },
      {
        "name": "instance",
        "type": "query",
        "datasource": "${datasource}",
        "label": "instance (node)",
        "multi": true,
        "includeAll": true,
        "refresh": 2,
        "query": "label_values(node_pressure_cpu_waiting_seconds_total{job=\"$job_nodeexporter\"}, instance)",
        "current": {}
      },
      {
        "name": "namespace",
        "type": "query",
        "datasource": "${datasource}",
        "label": "namespace",
        "multi": true,
        "includeAll": true,
        "refresh": 2,
        "query": "label_values(container_cpu_cfs_periods_total{job=\"$job_cadvisor\",container!=\"\"}, namespace)",
        "current": {}
      }
    ]
  },
  "panels": [
    {
      "type": "row",
      "title": "PSI Overview",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "panels": []
    },
    {
      "type": "timeseries",
      "title": "CPU PSI (some/full) — % of time waiting/stalled",
      "description": "Linux PSI: some=waiting_seconds_total, full=stalled_seconds_total; показано в процентах времени.",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.05 },
              { "color": "red", "value": 0.10 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 1 },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi", "sort": "none" }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "100 * rate(node_pressure_cpu_waiting_seconds_total{job=\"$job_nodeexporter\", instance=~\"$instance\"}[$__rate_interval])",
          "legendFormat": "{{instance}} CPU some",
          "interval": "",
          "instant": false
        },
        {
          "refId": "B",
          "expr": "100 * rate(node_pressure_cpu_stalled_seconds_total{job=\"$job_nodeexporter\", instance=~\"$instance\"}[$__rate_interval])",
          "legendFormat": "{{instance}} CPU full",
          "interval": "",
          "instant": false
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Memory PSI (some/full) — % of time waiting/stalled",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.02 },
              { "color": "red", "value": 0.05 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 9 },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi", "sort": "none" }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "100 * rate(node_pressure_memory_waiting_seconds_total{job=\"$job_nodeexporter\", instance=~\"$instance\"}[$__rate_interval])",
          "legendFormat": "{{instance}} Mem some"
        },
        {
          "refId": "B",
          "expr": "100 * rate(node_pressure_memory_stalled_seconds_total{job=\"$job_nodeexporter\", instance=~\"$instance\"}[$__rate_interval])",
          "legendFormat": "{{instance}} Mem full"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "IO PSI (some/full) — % of time waiting/stalled",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.02 },
              { "color": "red", "value": 0.05 }
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 17 },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi", "sort": "none" }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "100 * rate(node_pressure_io_waiting_seconds_total{job=\"$job_nodeexporter\", instance=~\"$instance\"}[$__rate_interval])",
          "legendFormat": "{{instance}} IO some"
        },
        {
          "refId": "B",
          "expr": "100 * rate(node_pressure_io_stalled_seconds_total{job=\"$job_nodeexporter\", instance=~\"$instance\"}[$__rate_interval])",
          "legendFormat": "{{instance}} IO full"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Blocked processes (I/O wait) — current",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      },
      "gridPos": { "h": 4, "w": 8, "x": 0, "y": 25 },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "values": false }, "orientation": "horizontal" },
      "targets": [
        {
          "refId": "A",
          "expr": "node_procs_blocked{job=\"$job_nodeexporter\", instance=~\"$instance\"}",
          "legendFormat": "{{instance}}"
        }
      ]
    },
    {
      "type": "row",
      "title": "CPU Throttling (cAdvisor)",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 29 },
      "panels": []
    },
    {
      "type": "timeseries",
      "title": "CPU throttling % by node (period ratio)",
      "description": "100 * rate(throttled_periods)/rate(periods) агрегировано по instance.",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5 },
              { "color": "red", "value": 15 }
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 30 },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi", "sort": "none" }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "100 * sum by (instance) (rate(container_cpu_cfs_throttled_periods_total{job=\"$job_cadvisor\",container!=\"\"}[$__rate_interval])) / sum by (instance) (rate(container_cpu_cfs_periods_total{job=\"$job_cadvisor\",container!=\"\"}[$__rate_interval]))",
          "legendFormat": "{{instance}}"
        }
      ]
    },
    {
      "type": "table",
      "title": "Top throttled pods (selected nodes, namespaces)",
      "description": "Процент троттлинга по Pod/Container за $__rate_interval.",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "transformations": [
        { "id": "organize", "options": { "excludeByName": { "Time": true } } }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "decimals": 2 },
        "overrides": []
      },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 38 },
      "options": {
        "showHeader": true,
        "footer": { "show": false }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, 100 * rate(container_cpu_cfs_throttled_periods_total{job=\"$job_cadvisor\",container!=\"\",instance=~\"$instance\",namespace=~\"$namespace\"}[$__rate_interval]) / rate(container_cpu_cfs_periods_total{job=\"$job_cadvisor\",container!=\"\",instance=~\"$instance\",namespace=~\"$namespace\"}[$__rate_interval]))",
          "legendFormat": "{{namespace}}/{{pod}}/{{container}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Throttled CPU time rate by node (seconds/s)",
      "description": "Суммарный rate(container_cpu_cfs_throttled_seconds_total) по instance.",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": { "unit": "s", "decimals": 3 },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 48 },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi", "sort": "none" }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (instance) (rate(container_cpu_cfs_throttled_seconds_total{job=\"$job_cadvisor\",container!=\"\"}[$__rate_interval]))",
          "legendFormat": "{{instance}}"
        }
      ]
    }
  ]
}
