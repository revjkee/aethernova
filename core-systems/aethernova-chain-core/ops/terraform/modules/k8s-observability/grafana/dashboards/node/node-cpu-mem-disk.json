{
  "uid": "node-cpu-mem-disk",
  "title": "Node CPU / Memory / Disk - Detail",
  "schemaVersion": 39,
  "version": 1,
  "editable": true,
  "timezone": "",
  "time": { "from": "now-1h", "to": "now" },
  "refresh": "5s",
  "tags": ["node", "host", "prometheus", "loki-stack", "observability"],
  "panels": [
    {
      "type": "stat",
      "title": "CPU utilization %",
      "id": 1,
      "datasource": { "type": "prometheus", "uid": "$datasource" },
      "targets": [
        {
          "expr": "100 * (1 - avg by (instance) (rate(node_cpu_seconds_total{job=~\"$job\",instance=\"$instance\",mode=\"idle\"}[5m])))",
          "legendFormat": "CPU %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "orange", "value": 70 }, { "color": "red", "value": 90 }] }
        },
        "overrides": []
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "orientation": "horizontal" },
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 0 }
    },
    { 
      "type": "timeseries",
      "title": "CPU by mode (%, stacked)",
      "id": 2,
      "stack": true,
      "datasource": { "type": "prometheus", "uid": "$datasource" },
      "targets": [
        {
          "expr": "100 * avg by (mode) (rate(node_cpu_seconds_total{job=~\"$job\",instance=\"$instance\",mode!~\"idle|guest|guest_nice\"}[5m]))",
          "legendFormat": "{{mode}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "gridPos": { "h": 9, "w": 18, "x": 6, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Load average (1/5/15)",
      "id": 3,
      "datasource": { "type": "prometheus", "uid": "$datasource" },
      "targets": [
        { "expr": "node_load1{job=~\"$job\",instance=\"$instance\"}", "legendFormat": "load1", "refId": "A" },
        { "expr": "node_load5{job=~\"$job\",instance=\"$instance\"}", "legendFormat": "load5", "refId": "B" },
        { "expr": "node_load15{job=~\"$job\",instance=\"$instance\"}", "legendFormat": "load15", "refId": "C" }
      ],
      "gridPos": { "h": 7, "w": 6, "x": 0, "y": 5 }
    },
    {
      "type": "stat",
      "title": "Memory utilization %",
      "id": 4,
      "datasource": { "type": "prometheus", "uid": "$datasource" },
      "targets": [
        {
          "expr": "100 * (1 - (node_memory_MemAvailable_bytes{job=~\"$job\",instance=\"$instance\"} / node_memory_MemTotal_bytes{job=~\"$job\",instance=\"$instance\"}))",
          "legendFormat": "mem %",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent", "min": 0, "max": 100 }, "overrides": [] },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 12 }
    },
    {
      "type": "timeseries",
      "title": "Memory breakdown (bytes)",
      "id": 5,
      "datasource": { "type": "prometheus", "uid": "$datasource" },
      "targets": [
        {
          "expr": "node_memory_MemTotal_bytes{job=~\"$job\",instance=\"$instance\"} - node_memory_MemAvailable_bytes{job=~\"$job\",instance=\"$instance\"}",
          "legendFormat": "used",
          "refId": "A"
        },
        {
          "expr": "node_memory_Buffers_bytes{job=~\"$job\",instance=\"$instance\"}",
          "legendFormat": "buffers",
          "refId": "B"
        },
        {
          "expr": "node_memory_Cached_bytes{job=~\"$job\",instance=\"$instance\"}",
          "legendFormat": "cached",
          "refId": "C"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" }, "overrides": [] },
      "gridPos": { "h": 7, "w": 12, "x": 6, "y": 9 }
    },
    {
      "type": "stat",
      "title": "Swap utilization %",
      "id": 6,
      "datasource": { "type": "prometheus", "uid": "$datasource" },
      "targets": [
        {
          "expr": "100 * (1 - (node_memory_SwapFree_bytes{job=~\"$job\",instance=\"$instance\"} / node_memory_SwapTotal_bytes{job=~\"$job\",instance=\"$instance\"}))",
          "legendFormat": "swap %",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "gridPos": { "h": 5, "w": 6, "x": 18, "y": 9 }
    },
    {
      "type": "bargauge",
      "title": "Filesystem usage by mountpoint (%)",
      "id": 7,
      "datasource": { "type": "prometheus", "uid": "$datasource" },
      "targets": [
        {
          "expr": "100 * (1 - (node_filesystem_avail_bytes{job=~\"$job\",instance=\"$instance\",fstype!~\"$fstype_exclude\",mountpoint=~\"$mountpoint\"} / node_filesystem_size_bytes{job=~\"$job\",instance=\"$instance\",fstype!~\"$fstype_exclude\",mountpoint=~\"$mountpoint\"}))",
          "legendFormat": "{{mountpoint}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent", "min": 0, "max": 100 }, "overrides": [] },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 17 }
    },
    {
      "type": "bargauge",
      "title": "Inodes usage by mountpoint (%)",
      "id": 8,
      "datasource": { "type": "prometheus", "uid": "$datasource" },
      "targets": [
        {
          "expr": "100 * (1 - (node_filesystem_files_free{job=~\"$job\",instance=\"$instance\",fstype!~\"$fstype_exclude\",mountpoint=~\"$mountpoint\"} / node_filesystem_files{job=~\"$job\",instance=\"$instance\",fstype!~\"$fstype_exclude\",mountpoint=~\"$mountpoint\"}))",
          "legendFormat": "{{mountpoint}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent", "min": 0, "max": 100 }, "overrides": [] },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 17 }
    },
    {
      "type": "timeseries",
      "title": "Disk throughput (MiB/s)",
      "id": 9,
      "datasource": { "type": "prometheus", "uid": "$datasource" },
      "targets": [
        {
          "expr": "sum by (device) (rate(node_disk_read_bytes_total{job=~\"$job\",instance=\"$instance\",device=~\"$device\"}[5m])) / 1024 / 1024",
          "legendFormat": "{{device}} read",
          "refId": "A"
        },
        {
          "expr": "sum by (device) (rate(node_disk_written_bytes_total{job=~\"$job\",instance=\"$instance\",device=~\"$device\"}[5m])) / 1024 / 1024",
          "legendFormat": "{{device}} write",
          "refId": "B"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "MiB/s" }, "overrides": [] },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 }
    },
    {
      "type": "timeseries",
      "title": "Disk IOPS (ops/s)",
      "id": 10,
      "datasource": { "type": "prometheus", "uid": "$datasource" },
      "targets": [
        {
          "expr": "sum by (device) (rate(node_disk_reads_completed_total{job=~\"$job\",instance=\"$instance\",device=~\"$device\"}[5m]))",
          "legendFormat": "{{device}} reads",
          "refId": "A"
        },
        {
          "expr": "sum by (device) (rate(node_disk_writes_completed_total{job=~\"$job\",instance=\"$instance\",device=~\"$device\"}[5m]))",
          "legendFormat": "{{device}} writes",
          "refId": "B"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 }
    },
    {
      "type": "timeseries",
      "title": "Disk busy time (%)",
      "id": 11,
      "datasource": { "type": "prometheus", "uid": "$datasource" },
      "targets": [
        {
          "expr": "100 * avg by (device) (rate(node_disk_io_time_seconds_total{job=~\"$job\",instance=\"$instance\",device=~\"$device\"}[5m]))",
          "legendFormat": "{{device}} busy",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "gridPos": { "h": 7, "w": 24, "x": 0, "y": 32 }
    }
  ],
  "templating": {
    "list": [
      {
        "type": "datasource",
        "name": "datasource",
        "label": "Datasource",
        "query": "prometheus",
        "current": { "selected": true, "text": "Prometheus", "value": "Prometheus" }
      },
      {
        "type": "query",
        "name": "job",
        "label": "job",
        "datasource": { "type": "prometheus", "uid": "$datasource" },
        "query": "label_values(node_exporter_build_info, job)",
        "refresh": 1,
        "includeAll": true,
        "multi": true,
        "current": { "selected": true, "text": ".*", "value": ".*" },
        "regex": ""
      },
      {
        "type": "query",
        "name": "instance",
        "label": "instance",
        "datasource": { "type": "prometheus", "uid": "$datasource" },
        "query": "label_values(node_cpu_seconds_total{job=~\"$job\"}, instance)",
        "refresh": 2,
        "multi": false
      },
      {
        "type": "query",
        "name": "device",
        "label": "device",
        "datasource": { "type": "prometheus", "uid": "$datasource" },
        "query": "label_values(node_disk_io_time_seconds_total{job=~\"$job\",instance=\"$instance\"}, device)",
        "refresh": 2,
        "multi": true,
        "includeAll": true,
        "current": { "selected": true, "text": ".*", "value": ".*" }
      },
      {
        "type": "query",
        "name": "mountpoint",
        "label": "mountpoint",
        "datasource": { "type": "prometheus", "uid": "$datasource" },
        "query": "label_values(node_filesystem_size_bytes{job=~\"$job\",instance=\"$instance\",fstype!~\"$fstype_exclude\"}, mountpoint)",
        "refresh": 2,
        "multi": true,
        "includeAll": true,
        "current": { "selected": true, "text": ".*", "value": ".*" }
      },
      {
        "type": "constant",
        "name": "fstype_exclude",
        "label": "exclude fstype (regex)",
        "query": "tmpfs|overlay|squashfs|nsfs|proc|sysfs|cgroup2?|selinuxfs|devpts|debugfs|tracefs|ramfs"
      }
    ]
  },
  "links": [],
  "annotations": { "list": [{ "builtIn": 1, "name": "Annotations & Alerts", "type": "dashboard", "enable": true }] }
}
