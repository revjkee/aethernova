{
  "uid": "zk-proof-latency",
  "title": "ZK • Proof latency & distribution",
  "tags": ["zk", "latency", "prometheus", "proof"],
  "timezone": "",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "editable": true,
  "time": { "from": "now-6h", "to": "now" },

  "templating": {
    "list": [
      {
        "type": "datasource",
        "name": "ds_prom",
        "label": "Prometheus datasource",
        "query": "prometheus",
        "refresh": 1,
        "hide": 0,
        "current": { "selected": true, "text": "", "value": "" },
        "options": []
      },
      {
        "type": "constant",
        "name": "metric_base",
        "label": "Base metric (histogram name w/o suffix)",
        "query": "zk_proof_duration_seconds",
        "hide": 0
      },
      {
        "type": "query",
        "name": "namespace",
        "label": "Namespace",
        "datasource": { "type": "prometheus", "uid": "$ds_prom" },
        "query": "label_values(${metric_base}_bucket, namespace)",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "current": { "selected": true, "text": ["All"], "value": ["$__all"] }
      },
      {
        "type": "query",
        "name": "job",
        "label": "Job",
        "datasource": { "type": "prometheus", "uid": "$ds_prom" },
        "query": "label_values(${metric_base}_bucket, job)",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "current": { "selected": true, "text": ["All"], "value": ["$__all"] }
      },
      {
        "type": "query",
        "name": "instance",
        "label": "Instance",
        "datasource": { "type": "prometheus", "uid": "$ds_prom" },
        "query": "label_values(${metric_base}_bucket, instance)",
        "refresh": 2,
        "includeAll": true,
        "multi": true,
        "current": { "selected": true, "text": ["All"], "value": ["$__all"] }
      }
    ]
  },

  "panels": [
    {
      "type": "heatmap",
      "title": "Distribution over time (histogram buckets → heatmap)",
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "$ds_prom" },
      "fieldConfig": {
        "defaults": { "unit": "s" },
        "overrides": []
      },
      "options": {
        "legend": { "show": true },
        "heatmap": { "yAxis": { "axisLabel": "le (s)" } },
        "tooltip": { "show": true }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (le) (rate(${metric_base}_bucket{namespace=~\"$namespace\",job=~\"$job\",instance=~\"$instance\"}[$__rate_interval]))",
          "legendFormat": "{{le}}",
          "format": "heatmap"
        }
      ]
    },

    {
      "type": "timeseries",
      "title": "Quantiles p50/p90/p99 (histogram_quantile)",
      "gridPos": { "h": 10, "w": 14, "x": 0, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "$ds_prom" },
      "fieldConfig": { "defaults": { "unit": "s" }, "overrides": [] },
      "options": { "legend": { "displayMode": "table", "placement": "bottom" } },
      "targets": [
        {
          "refId": "Q50",
          "expr": "histogram_quantile(0.5, sum by (le) (rate(${metric_base}_bucket{namespace=~\"$namespace\",job=~\"$job\",instance=~\"$instance\"}[$__rate_interval])))",
          "legendFormat": "p50"
        },
        {
          "refId": "Q90",
          "expr": "histogram_quantile(0.9, sum by (le) (rate(${metric_base}_bucket{namespace=~\"$namespace\",job=~\"$job\",instance=~\"$instance\"}[$__rate_interval])))",
          "legendFormat": "p90"
        },
        {
          "refId": "Q99",
          "expr": "histogram_quantile(0.99, sum by (le) (rate(${metric_base}_bucket{namespace=~\"$namespace\",job=~\"$job\",instance=~\"$instance\"}[$__rate_interval])))",
          "legendFormat": "p99"
        }
      ]
    },

    {
      "type": "timeseries",
      "title": "Mean latency (sum/count) and throughput",
      "gridPos": { "h": 10, "w": 10, "x": 14, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "$ds_prom" },
      "fieldConfig": { "defaults": { "unit": "s" }, "overrides": [] },
      "options": { "legend": { "displayMode": "table", "placement": "bottom" } },
      "targets": [
        {
          "refId": "AVG",
          "expr": "sum(rate(${metric_base}_sum{namespace=~\"$namespace\",job=~\"$job\",instance=~\"$instance\"}[$__rate_interval]))\n/\nsum(rate(${metric_base}_count{namespace=~\"$namespace\",job=~\"$job\",instance=~\"$instance\"}[$__rate_interval]))",
          "legendFormat": "avg"
        },
        {
          "refId": "TPS",
          "expr": "sum(rate(${metric_base}_count{namespace=~\"$namespace\",job=~\"$job\",instance=~\"$instance\"}[$__rate_interval]))",
          "legendFormat": "throughput req/s"
        }
      ]
    },

    {
      "type": "stat",
      "title": "Current p99",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 22 },
      "datasource": { "type": "prometheus", "uid": "$ds_prom" },
      "fieldConfig": { "defaults": { "unit": "s", "decimals": 3 }, "overrides": [] },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [
        {
          "refId": "S99",
          "expr": "histogram_quantile(0.99, sum by (le) (rate(${metric_base}_bucket{namespace=~\"$namespace\",job=~\"$job\",instance=~\"$instance\"}[5m])))"
        }
      ]
    },

    {
      "type": "stat",
      "title": "Current throughput (req/s)",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 22 },
      "datasource": { "type": "prometheus", "uid": "$ds_prom" },
      "fieldConfig": { "defaults": { "unit": "req/s", "decimals": 2 }, "overrides": [] },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [
        {
          "refId": "STPS",
          "expr": "sum(rate(${metric_base}_count{namespace=~\"$namespace\",job=~\"$job\",instance=~\"$instance\"}[5m]))"
        }
      ]
    },

    {
      "type": "table",
      "title": "Instances • p99 (last) and avg (5m)",
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 22 },
      "datasource": { "type": "prometheus", "uid": "$ds_prom" },
      "transformations": [
        { "id": "reduce", "options": { "labelsToFields": true, "reducers": ["lastNotNull"] } }
      ],
      "fieldConfig": { "defaults": { "custom": {} }, "overrides": [] },
      "targets": [
        {
          "refId": "IP99",
          "expr": "histogram_quantile(0.99, sum by (instance, le) (rate(${metric_base}_bucket{namespace=~\"$namespace\",job=~\"$job\"}[$__rate_interval])))",
          "legendFormat": "{{instance}} p99",
          "format": "time_series"
        },
        {
          "refId": "IAVG",
          "expr": "sum by (instance) (rate(${metric_base}_sum{namespace=~\"$namespace\",job=~\"$job\"}[$__rate_interval])) / sum by (instance) (rate(${metric_base}_count{namespace=~\"$namespace\",job=~\"$job\"}[$__rate_interval]))",
          "legendFormat": "{{instance}} avg",
          "format": "time_series"
        }
      ]
    }
  ]
}
