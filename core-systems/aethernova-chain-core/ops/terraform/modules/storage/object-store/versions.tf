 * Module: storage/object-store
 * File:   versions.tf
 *
 * Назначение:
 *   Задает минимально необходимые версии Terraform и провайдеров для модуля
 *   объектного хранилища. Модуль НЕ настраивает провайдеры (provider blocks)
 *   и наследует их конфигурацию из корневого модуля.
 */

terraform {
  # Поддерживаем стабильные версии Terraform 1.6.x–<2.0.0
  required_version = ">= 1.6.0, < 2.0.0"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      # Закрепляемся на мажорной ветке v5: минимальная версия — 5.50.0,
      # верхняя граница исключает v6, чтобы не поймать несовместимые изменения.
      version = ">= 5.50.0, < 6.0.0"
    }

    # Генерация суффиксов/имён/идентификаторов, если потребуется в ресурсе.
    random = {
      source  = "hashicorp/random"
      version = ">= 3.6.0, < 4.0.0"
    }

    # Полезен для префикс-архивации/загрузки политик, если понадобится.
    archive = {
      source  = "hashicorp/archive"
      version = ">= 2.4.0, < 3.0.0"
    }

    # Удобен для зависимостей по времени (например, ожидания консистентности S3).
    time = {
      source  = "hashicorp/time"
      version = ">= 0.11.0, < 1.0.0"
    }
  }
}

# Примечание:
# - Конфигурацию провайдеров (provider "aws" { ... }) следует задавать в корневом модуле
#   или передавать в модуль через алиасы/for_each по провайдерам.
# - Данный файл не содержит ресурсы/данные и безопасен для повторного использования.
