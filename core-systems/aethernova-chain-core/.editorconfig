# EditorConfig for Aethernova Chain Core (industrial grade)
# Documentation: https://editorconfig.org
root = true

# -------- Base defaults (apply to all files) --------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
tab_width = 4

# -------- Documentation / prose --------
[*.{md,mdx,txt,adoc,rst}]
indent_size = 2
trim_trailing_whitespace = false

# -------- Python --------
[*.py]
indent_size = 4

# -------- JavaScript / TypeScript --------
[*.{js,jsx,ts,tsx,cjs,mjs}]
indent_size = 2

# -------- JSON / JSONC --------
[*.{json,jsonc,webmanifest}]
indent_size = 2
insert_final_newline = true

# Common dotfile configs that are JSON/YAML-like
[{.eslintrc,.prettierrc,.babelrc,.stylelintrc,.lintstagedrc,.commitlintrc}]
indent_size = 2

# -------- YAML (CI/CD, K8s, Helm values, Ansible, etc.) --------
[*.{yml,yaml}]
indent_size = 2

# Kubernetes manifests (explicit match patterns also supported by the YAML rule)
[*.{k8s.yaml,k8s.yml}]
indent_size = 2

# -------- TOML & INI --------
[*.{toml,ini}]
indent_size = 2

# -------- Shell scripts --------
[*.{sh,bash}]
indent_size = 2
end_of_line = lf

# -------- Protocol Buffers --------
[*.proto]
indent_size = 2

# -------- Terraform / HCL --------
[*.{tf,tfvars,hcl}]
indent_size = 2

# -------- Docker --------
[Dockerfile]
indent_size = 2

# -------- Web assets --------
[*.{html,htm,xml,css,scss,less}]
indent_size = 2

# -------- SQL --------
[*.sql]
indent_size = 4

# -------- Makefile (tabs are required) --------
[Makefile]
indent_style = tab
indent_size = 4

# -------- Environment files --------
# Preserve spaces and avoid forcing a final newline; some tooling is sensitive.
[*.env]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = false

# -------- Patches & lockfiles --------
# Do not alter whitespace/newlines to keep integrity.
[*.{patch,lock}]
trim_trailing_whitespace = false
insert_final_newline = false

# -------- Legal / notices --------
[{LICENSE,NOTICE,COPYING,AUTHORS,CHANGELOG.md}]
trim_trailing_whitespace = false
insert_final_newline = true
