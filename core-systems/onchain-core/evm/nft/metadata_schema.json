{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NFT Metadata Schema",
  "type": "object",
  "required": ["name", "description", "image", "attributes", "external_url", "animation_url", "properties"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Имя NFT токена"
    },
    "description": {
      "type": "string",
      "description": "Подробное описание NFT"
    },
    "image": {
      "type": "string",
      "format": "uri",
      "description": "URL изображения или превью NFT"
    },
    "external_url": {
      "type": "string",
      "format": "uri",
      "description": "Внешняя ссылка на сайт или страницу NFT"
    },
    "animation_url": {
      "type": ["string", "null"],
      "format": "uri",
      "description": "URL анимации или интерактивного контента (если есть)"
    },
    "attributes": {
      "type": "array",
      "description": "Список атрибутов и свойств NFT",
      "items": {
        "type": "object",
        "required": ["trait_type", "value"],
        "properties": {
          "trait_type": {
            "type": "string",
            "description": "Тип характеристики, например, цвет, редкость"
          },
          "value": {
            "type": ["string", "number", "boolean"],
            "description": "Значение характеристики"
          },
          "display_type": {
            "type": ["string", "null"],
            "enum": ["number", "boost_percentage", "boost_number", null],
            "description": "Опциональный способ отображения"
          },
          "max_value": {
            "type": ["number", "null"],
            "description": "Максимальное значение (для прогрессбаров)"
          }
        }
      }
    },
    "properties": {
      "type": "object",
      "description": "Дополнительные свойства для смарт-контракта или систем",
      "properties": {
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["uri", "type"],
            "properties": {
              "uri": {
                "type": "string",
                "format": "uri"
              },
              "type": {
                "type": "string",
                "description": "MIME-тип файла"
              }
            }
          }
        },
        "category": {
          "type": "string",
          "description": "Категория NFT, например 'image', 'video', 'audio', 'vr'"
        }
      },
      "required": ["files", "category"]
    }
  },
  "additionalProperties": false
}
