# policy-core/.editorconfig
# Индустриальные настройки форматирования для модуля policy-core
# Спецификация: https://editorconfig.org
root = true

# -----------------------------
# Базовые правила по умолчанию
# -----------------------------
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# -----------------------------
# Markdown / RST — сохраняем пробелы в конце строк (важны для переносов)
# -----------------------------
[*.{md,mdx,rst}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Патчи — не трогаем хвостовые пробелы
[*.patch]
trim_trailing_whitespace = false

# -----------------------------
# JSON / JSONC / конфиги Prettier/ESLint/Babel (JSON-стиль)
# -----------------------------
[*.{json,jsonc}]
indent_style = space
indent_size = 2

[.*rc]
indent_style = space
indent_size = 2

[*.{eslintrc,babelrc,prettierrc,stylelintrc}]
indent_style = space
indent_size = 2

# -----------------------------
# YAML (в т.ч. Helm charts, GitHub Actions)
# -----------------------------
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# -----------------------------
# Python
# -----------------------------
[*.{py,pyi}]
indent_style = space
indent_size = 4

# -----------------------------
# TypeScript / JavaScript
# -----------------------------
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_style = space
indent_size = 2

# -----------------------------
# CSS / SCSS / LESS
# -----------------------------
[*.{css,scss,less}]
indent_style = space
indent_size = 2

# -----------------------------
# Terraform / HCL
# -----------------------------
[*.{tf,tfvars,hcl}]
indent_style = space
indent_size = 2

# -----------------------------
# Protobuf
# -----------------------------
[*.proto]
indent_style = space
indent_size = 2

# -----------------------------
# SQL
# -----------------------------
[*.sql]
indent_style = space
indent_size = 4
insert_final_newline = true

# -----------------------------
# Shell / Bash / Zsh
# -----------------------------
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2
end_of_line = lf

# PowerShell — допустим CRLF для Windows-окружений
[*.ps1]
indent_style = space
indent_size = 2
end_of_line = crlf

# Batch — классические табы и CRLF
[*.bat]
indent_style = tab
tab_width = 4
end_of_line = crlf

# -----------------------------
# Makefile — только табы
# -----------------------------
[Makefile]
indent_style = tab
tab_width = 4
trim_trailing_whitespace = false

# -----------------------------
# Dockerfile
# -----------------------------
[Dockerfile*]
indent_style = space
indent_size = 4

# -----------------------------
# TOML / INI / CFG / CONF
# -----------------------------
[*.{toml,ini,cfg,conf}]
indent_style = space
indent_size = 2

# -----------------------------
# XML
# -----------------------------
[*.xml]
indent_style = space
indent_size = 2

# -----------------------------
# Текстовые файлы
# -----------------------------
[*.{txt,log}]
indent_style = space
indent_size = 2
insert_final_newline = true
