{
  "name": "@neurocity/policy-core-sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for policy-core PDP API (Zero-Trust ABAC/RBAC/ReBAC).",
  "keywords": [
    "policy",
    "abac",
    "rbac",
    "zero-trust",
    "pdp",
    "sdk",
    "typescript",
    "security"
  ],
  "license": "Apache-2.0",
  "author": "NeuroCity Platform Team",
  "repository": {
    "type": "git",
    "url": "https://example.com/neurocity/policy-core.git",
    "directory": "sdks/typescript"
  },
  "bugs": {
    "url": "https://example.com/neurocity/policy-core/issues"
  },
  "homepage": "https://example.com/neurocity/policy-core#readme",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./fetch": {
      "types": "./dist/fetch.d.ts",
      "import": "./dist/fetch.mjs",
      "require": "./dist/fetch.cjs",
      "default": "./dist/fetch.mjs"
    },
    "./headers": {
      "types": "./dist/headers.d.ts",
      "import": "./dist/headers.mjs",
      "require": "./dist/headers.cjs",
      "default": "./dist/headers.mjs"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.17"
  },
  "browser": {
    "node:crypto": false,
    "fs": false,
    "path": false
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm clean && tsup src/index.ts src/fetch.ts src/headers.ts --format esm,cjs --dts --sourcemap --treeshake --minify",
    "dev": "tsup src/index.ts --format esm --dts --sourcemap --watch",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "vitest run --reporter=dot",
    "test:watch": "vitest",
    "audit": "node ./scripts/audit-licenses.cjs",
    "prepare": "husky install",
    "prepublishOnly": "pnpm build && pnpm test && pnpm typecheck",
    "release": "semantic-release"
  },
  "packageManager": "pnpm@9.6.0",
  "dependencies": {
    "undici": "^6.19.8",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "typescript": ">=5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.11",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.5",
    "semantic-release": "^24.0.0",
    "tsup": "^8.2.4",
    "typescript": "^5.6.2",
    "vitest": "^2.0.5"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*"
      ]
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "provenance": true
  },
  "funding": {
    "type": "github",
    "url": "https://example.com/sponsors/neurocity"
  }
}
