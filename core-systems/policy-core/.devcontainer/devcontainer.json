{
  "name": "policy-core dev",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "username": "vscode",
      "uid": "1000",
      "gid": "1000"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12",
      "installTools": true
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest"
    }
  },
  "containerUser": "vscode",
  "remoteUser": "vscode",
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "16gb"
  },
  "updateContentCommand": "",
  "postCreateCommand": "/bin/bash -lc '\nset -euo pipefail\npython -m venv .venv\n. .venv/bin/activate\npython -m pip install --upgrade pip wheel\npip install hatch\n# Устанавливаем dev-зависимости из pyproject: extras \"dev\"\npip install -e \".[dev]\"\n# Быстрые smoke-проверки качества (не критичны к падению при первом запуске)\nruff --version || true\nblack --version || true\nmypy --version || true\npytest -q || true\n'",
  "postStartCommand": "/bin/bash -lc '\n. .venv/bin/activate\npython -V\n# Опционально прогоняем базовые задачи\nhatch run fmt || true\n'",
  "mounts": [
    "source=policy-core_pip-cache,target=/home/vscode/.cache/pip,type=volume",
    "source=policy-core_hatch-cache,target=/home/vscode/.cache/hatch,type=volume"
  ],
  "containerEnv": {
    "PIP_DISABLE_PIP_VERSION_CHECK": "1",
    "PYTHONDONTWRITEBYTECODE": "1",
    "PYTHONUNBUFFERED": "1",
    "HATCH_ENV_TYPE_VENV": "true"
  },
  "runArgs": [
    "--security-opt",
    "no-new-privileges:true"
  ],
  "forwardPorts": [8000, 8080, 3000],
  "portsAttributes": {
    "8000": { "label": "policy-core api" },
    "8080": { "label": "aux service" },
    "3000": { "label": "web dev" }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "python.testing.pytestEnabled": true,
        "python.testing.pytestArgs": ["tests"],
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "ruff.organizeImports": true,
        "ruff.path": [".venv/bin/ruff"],
        "python.analysis.typeCheckingMode": "strict",
        "files.trimTrailingWhitespace": true,
        "files.eol": "\n"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker",
        "github.vscode-github-actions",
        "streetsidesoftware.code-spell-checker"
      ]
    }
  },
  "workspaceFolder": "/workspaces/policy-core",
  "onCreateCommand": "",
  "overrideCommand": false
}
