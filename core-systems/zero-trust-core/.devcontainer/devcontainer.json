{
  "name": "zero-trust-core (python3.11, secure)",
  "image": "mcr.microsoft.com/devcontainers/python:3.11-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "username": "vscode"
    },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest",
      "moby": true
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/aws-cli:1": {},
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "helm": "latest",
      "kubectl": "latest",
      "minikube": "none"
    },
    "ghcr.io/devcontainers-contrib/features/poetry:2": {
      "version": "latest"
    }
  },
  "remoteUser": "vscode",
  "runArgs": [
    "--cap-drop=ALL",
    "--security-opt=no-new-privileges:true",
    "--pids-limit=512"
  ],
  "containerEnv": {
    "PIP_NO_CACHE_DIR": "1",
    "POETRY_VIRTUALENVS_IN_PROJECT": "true",
    "POETRY_CACHE_DIR": "/workspaces/.cache/pypoetry",
    "POETRY_NO_INTERACTION": "1",
    "PYTHONUNBUFFERED": "1",
    "PYTHONDONTWRITEBYTECODE": "1",
    "UV_SYSTEM_PYTHON": "1"
  },
  "mounts": [
    "type=volume,source=ztc_poetry_cache,target=/workspaces/.cache/pypoetry",
    "type=volume,source=ztc_pip_cache,target=/home/vscode/.cache/pip",
    "type=bind,source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,consistency=cached,readonly",
    "type=bind,source=/var/run/docker.sock,target=/var/run/docker.sock"
  ],
  "updateContentCommand": "git config --global --add safe.directory /workspaces/zero-trust-core && pre-commit install --install-hooks || true",
  "postCreateCommand": "bash .devcontainer/scripts/post_create.sh",
  "postStartCommand": "bash .devcontainer/scripts/post_start.sh",
  "shutdownAction": "stopContainer",
  "workspaceFolder": "/workspaces/zero-trust-core",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": ".venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "python.analysis.typeCheckingMode": "strict",
        "editor.formatOnSave": true,
        "[python]": { "editor.defaultFormatter": "ms-python.black-formatter" },
        "ruff.organizeImports": true,
        "ruff.enable": true,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "charliermarsh.ruff",
        "ms-azuretools.vscode-docker",
        "GitHub.vscode-github-actions",
        "eamodio.gitlens",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "redhat.vscode-yaml",
        "tamasfe.even-better-toml",
        "oderwat.indent-rainbow"
      ]
    }
  },
  "forwardPorts": [8080, 4317, 4318],
  "portsAttributes": {
    "8080": { "label": "zero-trust-core api", "onAutoForward": "openBrowser" },
    "4317": { "label": "OTLP gRPC" },
    "4318": { "label": "OTLP HTTP" }
  },
  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb",
    "storage": "10gb"
  }
}
