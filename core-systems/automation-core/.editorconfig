# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs.
# Root of this repository scope
root = true

# --------------------------------------------------------------------
# Global defaults (safe, cross-platform)
# --------------------------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
tab_width = 4

# --------------------------------------------------------------------
# Text/Docs
# --------------------------------------------------------------------
[*.{md,markdown,MD}]
# Сохраняем двойные пробелы в Markdown для жёстких переносов
trim_trailing_whitespace = false
indent_size = 2
tab_width = 2

[*.{txt,adoc,rst}]
indent_size = 2
tab_width = 2

# --------------------------------------------------------------------
# JSON / YAML / TOML / INI
# --------------------------------------------------------------------
[*.{json,jsonc}]
indent_size = 2
tab_width = 2

[*.{yml,yaml}]
indent_size = 2
tab_width = 2

[*.toml]
indent_size = 2
tab_width = 2

[*.ini]
indent_size = 2
tab_width = 2

# --------------------------------------------------------------------
# Python
# --------------------------------------------------------------------
[*.{py,pyi}]
indent_style = space
indent_size = 4
tab_width = 4
# Пустые строки в конце файлов важны для tooling — не изменяем дефолты

# --------------------------------------------------------------------
# JavaScript / TypeScript / Web
# --------------------------------------------------------------------
[*.{js,jsx,ts,tsx,cjs,mjs}]
indent_size = 2
tab_width = 2

[*.{html,htm,css,scss,less,vue,svelte}]
indent_size = 2
tab_width = 2

# --------------------------------------------------------------------
# Shell / Docker / Make
# --------------------------------------------------------------------
[*.{sh,bash}]
indent_size = 2
tab_width = 2

[Dockerfile]
indent_size = 2
tab_width = 2

[*.mk]
indent_style = tab
tab_width = 4
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
tab_width = 4
trim_trailing_whitespace = false

# --------------------------------------------------------------------
# Data / Config varieties
# --------------------------------------------------------------------
[*.{csv,tsv}]
# Не обрезаем хвостовые пробелы в табличных данных
trim_trailing_whitespace = false
end_of_line = lf

# --------------------------------------------------------------------
# Solidity / Proto / SQL
# --------------------------------------------------------------------
[*.sol]
indent_size = 4
tab_width = 4

[*.proto]
indent_size = 2
tab_width = 2

[*.sql]
indent_size = 4
tab_width = 4

# --------------------------------------------------------------------
# Windows-only script files
# --------------------------------------------------------------------
[*.{bat,cmd}]
end_of_line = crlf
indent_style = tab
tab_width = 4
trim_trailing_whitespace = false

[*.{ps1,psm1}]
# Для PowerShell оставляем LF, если репозиторий кросс-платформенный
indent_size = 4
tab_width = 4

# --------------------------------------------------------------------
# Images/Binaries (no-op but explicit)
# --------------------------------------------------------------------
[*.{png,jpg,jpeg,gif,webp,avif,ico,zip,jar,bin,exe,dll,so,dylib,pdf,woff,woff2}]
# Текстовые параметры к бинарям не применяются; фиксируем отсутствие изменений
insert_final_newline = false
trim_trailing_whitespace = false
end_of_line = lf
