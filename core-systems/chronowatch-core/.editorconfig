# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs.
# See: https://editorconfig.org

root = true

############################
# Base defaults for all files
############################
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Default indentation for most text/config files (explicitly overridden below where needed)
indent_style = space
indent_size = 2

# Some editors honor this; harmless otherwise
max_line_length = 100

############################
# Source code: Python
############################
[*.py]
indent_style = space
indent_size = 4

# Common generated artifacts (keep trailing spaces off, but ensure newline at EOF)
[*.pyi]
indent_style = space
indent_size = 4

############################
# JavaScript / TypeScript
############################
[*.{js,jsx,ts,tsx,cjs,mjs}]
indent_style = space
indent_size = 2

############################
# JSON / JSONC
############################
[*.{json,jsonc}]
indent_style = space
indent_size = 2
insert_final_newline = true
# Many tools require no trailing spaces and LF already enforced

############################
# YAML
############################
[*.{yaml,yml}]
indent_style = space
indent_size = 2

############################
# TOML
############################
[*.toml]
indent_style = space
indent_size = 2

############################
# Markdown / reStructuredText
# Do NOT trim trailing whitespace: two spaces at EOL signify hard line breaks
############################
[*.{md,markdown,rst,adoc}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
max_line_length = off

############################
# Makefile
# Make requires real tabs for recipe lines
############################
[Makefile]
indent_style = tab

[*.mk]
indent_style = tab

############################
# Shell scripts
############################
[*.{sh,bash}]
indent_style = space
indent_size = 2

############################
# Docker / Compose
############################
[Dockerfile]
indent_style = space
indent_size = 2

[*.{yml,yaml}.dist]
indent_style = space
indent_size = 2

############################
# INI / CFG
############################
[*.{ini,cfg,conf}]
indent_style = space
indent_size = 2

############################
# Protobuf
############################
[*.proto]
indent_style = space
indent_size = 2

############################
# Solidity (if present)
############################
[*.sol]
indent_style = space
indent_size = 2

############################
# Misc: SQL, CSV, txt, license headers
############################
[*.{sql,csv,txt,license,licence}]
indent_style = space
indent_size = 2

############################
# Ignore vendored / generated directories if editor supports per-dir config
############################
[{venv,env,.venv,node_modules,dist,build,.build,.cache,.idea,.vscode}/**]
# Keep defaults but ensure no accidental trims off? Safer to leave base rules applied.
# Intentionally left blank to inherit global settings.
