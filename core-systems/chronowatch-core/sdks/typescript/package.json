{
  "name": "@chronowatch/core-sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for Chronowatch Core: windowing, scheduling, telemetry clients.",
  "keywords": [
    "chronowatch",
    "sdk",
    "typescript",
    "windowing",
    "scheduling",
    "telemetry",
    "grpc",
    "protobuf"
  ],
  "license": "UNLICENSED",
  "sideEffects": false,
  "engines": {
    "node": ">=18.18.0"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "rimraf dist && tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "docs": "typedoc --cleanOutputDir",
    "prepare": "husky install",
    "prepublishOnly": "npm run build && npm run typecheck && npm run lint && npm run test:ci"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.2.0",
    "@bufbuild/connect": "^1.6.1",
    "@bufbuild/connect-web": "^1.6.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "eslint": "^9.10.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typedoc": "^0.25.13",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "packageManager": "npm@10.8.1",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*",
        "dist/index.d.ts"
      ]
    }
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true,
    "sourcemap": true,
    "minify": true,
    "clean": true,
    "treeshake": true,
    "skipNodeModulesBundle": true,
    "outDir": "dist",
    "target": "es2022"
  }
}
