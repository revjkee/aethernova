# Конфигурация подключения к тестовой базе данных (Jinja2 шаблон)

database:
  host: "{{ db_host | default('localhost') }}"
  port: "{{ db_port | default(5432) }}"
  name: "{{ db_name | default('test_db') }}"
  user: "{{ db_user | default('test_user') }}"
  password: "{{ db_password | default('test_password') }}"
  sslmode: "{{ db_sslmode | default('disable') }}"
