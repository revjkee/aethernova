# EditorConfig помогает поддерживать единый стиль кодирования между разными IDE и редакторами
# Для активации — убедитесь, что ваш редактор поддерживает EditorConfig (https://editorconfig.org/)

root = true

# Общие настройки для всех файлов
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 120

# Конфигурация для Python
[*.py]
indent_size = 4
# Совместимость с PEP 8
# Отключаем автоматическое удаление пробелов после # в комментариях — инструмент решает линтер
trim_trailing_whitespace = true

# Конфигурация для JSON
[*.json]
indent_size = 2

# Конфигурация для YAML/YML
[*.{yaml,yml}]
indent_size = 2
# В YAML важно сохранять пробелы
trim_trailing_whitespace = false

# Конфигурация для Markdown
[*.md]
indent_size = 2
trim_trailing_whitespace = false  # Сохраняем двойные пробелы для переносов строк в Markdown

# Конфигурация для TOML
[*.toml]
indent_size = 2

# Конфигурация для shell-скриптов
[*.sh]
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true

# Конфигурация для Makefile
[Makefile]
indent_style = tab

# Игнорируем бинарные файлы
[*.{png,jpg,jpeg,gif,svg,ico,lock}]
insert_final_newline = false
trim_trailing_whitespace = false
