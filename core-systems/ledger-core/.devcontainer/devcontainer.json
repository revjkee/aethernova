{
  "name": "ledger-core (dev)",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000",
      "installZsh": true,
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installJupyterlab": false
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": true,
      "enableNonRootDocker": true
    }
  },
  "remoteUser": "vscode",
  "workspaceFolder": "/workspaces/ledger-core",
  "containerEnv": {
    "PIP_DISABLE_PIP_VERSION_CHECK": "1",
    "PIP_NO_INPUT": "1",
    "PYTHONDONTWRITEBYTECODE": "1",
    "PYTHONUNBUFFERED": "1",
    "UV_LINK_MODE": "copy"
  },
  "runArgs": [
    "--init",
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],
  "mounts": [
    "source=devcontainer-pip-cache,target=/home/vscode/.cache/pip,type=volume",
    "source=devcontainer-uv-cache,target=/home/vscode/.cache/uv,type=volume",
    "source=${localWorkspaceFolder}/.venv,target=/workspaces/ledger-core/.venv,type=bind,consistency=cached"
  ],
  "overrideCommand": false,
  "updateRemoteUserUID": false,
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "editor.formatOnSave": true,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "python.analysis.typeCheckingMode": "strict",
        "python.defaultInterpreterPath": "/workspaces/ledger-core/.venv/bin/python",
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,
        "python.testing.pytestArgs": [
          "tests"
        ],
        "ruff.enable": true,
        "ruff.fixOnSave": false,
        "ruff.organizeImports": true,
        "mypy-type-checker.checkerEnabled": true,
        "mypy-type-checker.dmypyEnabled": false,
        "mypy-type-checker.args": [
          "--config-file",
          "mypy.ini"
        ],
        "testing.automaticallyOpenPeekView": "never",
        "git.confirmSync": false
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "matangover.mypy",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens",
        "github.vscode-github-actions",
        "tamasfe.even-better-toml",
        "redhat.vscode-yaml",
        "ms-vscode.makefile-tools"
      ]
    }
  },
  "postCreateCommand": "bash -lc 'set -euxo pipefail; sudo apt-get update; sudo apt-get install -y --no-install-recommends make curl ca-certificates pkg-config build-essential libffi-dev; python3 -m venv /workspaces/ledger-core/.venv; . /workspaces/ledger-core/.venv/bin/activate; python -m pip install -U pip setuptools wheel; python -m pip install -U ruff mypy pytest pytest-cov coverage pre-commit; if [ -f pyproject.toml ]; then python -m pip install -e .; fi; if [ -f requirements-dev.txt ]; then python -m pip install -r requirements-dev.txt; fi; if [ -f .pre-commit-config.yaml ]; then pre-commit install --install-hooks; fi; git config --global --add safe.directory /workspaces/ledger-core; echo DONE'",
  "postAttachCommand": {
    "server": "bash -lc 'echo ENV ready; python --version; ruff --version; mypy --version; pytest --version'"
  },
  "forwardPorts": [],
  "portsAttributes": {},
  "onCreateCommand": "",
  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb",
    "storage": "16gb"
  }
}
