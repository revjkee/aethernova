################################################################################
# cybersecurity-core â€” Example Environment Configuration
# WARNING: Do not commit real secrets. Replace placeholder values before use.
################################################################################

#####################################
# Core Application
#####################################
APP_NAME=cybersecurity-core
APP_ENV=development   # options: development | staging | production
APP_DEBUG=false
APP_PORT=8080
APP_HOST=0.0.0.0

#####################################
# Database (PostgreSQL)
#####################################
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cybersecdb
DB_USER=cyberuser
DB_PASSWORD=change_me_securely
DB_SSLMODE=require     # disable | require | verify-ca | verify-full
DB_POOL_SIZE=10

#####################################
# Redis / Caching
#####################################
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change_me_securely
REDIS_DB=0
CACHE_TTL_SECONDS=300

#####################################
# Message Broker (RabbitMQ / Kafka)
#####################################
BROKER_TYPE=rabbitmq      # options: rabbitmq | kafka
BROKER_HOST=localhost
BROKER_PORT=5672
BROKER_USER=brokeruser
BROKER_PASSWORD=change_me_securely
BROKER_VHOST=/cybersec

#####################################
# Security & Auth
#####################################
JWT_SECRET=change_me_strong_secret
JWT_EXPIRY_HOURS=12
PASSWORD_HASH_ALGO=bcrypt   # options: bcrypt | argon2 | scrypt
OAUTH2_PROVIDER_URL=https://auth.example.com
OAUTH2_CLIENT_ID=replace_me
OAUTH2_CLIENT_SECRET=replace_me
RBAC_POLICY_PATH=./configs/rbac.yaml

#####################################
# Cryptography
#####################################
CRYPTO_KEY_PATH=./secrets/private_key.pem
CRYPTO_CERT_PATH=./secrets/public_cert.pem
ENCRYPTION_ALGO=AES-256-GCM
KMS_PROVIDER=local          # options: local | aws-kms | gcp-kms | hashicorp-vault

#####################################
# Logging & Observability
#####################################
LOG_LEVEL=INFO              # DEBUG | INFO | WARN | ERROR
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
TRACING_ENABLED=true
TRACING_BACKEND=jaeger
TRACING_ENDPOINT=http://localhost:14268/api/traces
METRICS_ENABLED=true
METRICS_PORT=9100

#####################################
# Monitoring & Alerts
#####################################
PROMETHEUS_SCRAPE=true
ALERTMANAGER_ENDPOINT=http://localhost:9093
SENTRY_DSN=https://replace_me@sentry.io/project

#####################################
# API & External Integrations
#####################################
API_RATE_LIMIT=100
API_KEY_DEFAULT=replace_me
WEBHOOK_SECRET=replace_me
THREAT_INTEL_FEED_URL=https://threats.example.com/feed
THREAT_INTEL_API_KEY=replace_me

#####################################
# Compliance & Export Control
#####################################
EXPORT_CONTROL_REGION=EU   # options: US | EU | CN | OTHER
DATA_RESIDENCY_REGION=EU
ANONYMIZATION_ENABLED=true
AUDIT_LOG_PATH=./logs/audit.log

#####################################
# Feature Flags
#####################################
FEATURE_SELF_HEALING=true
FEATURE_AI_DETECTION=true
FEATURE_ZERO_TRUST_MODE=true

#####################################
# Development & Testing
#####################################
MOCK_SERVICES=false
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=Test123!
