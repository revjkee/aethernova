{
  "version": "2.0-industrial",
  "description": "Custom vulnerability signatures for TeslaAI-enhanced Nikto",
  "last_updated": "2025-07-25T12:00:00Z",
  "rules": [
    {
      "id": "TAI-CUST-0001",
      "name": "Exposed .git directory",
      "vector": "Information Disclosure",
      "url_pattern": "/\\.git/config",
      "http_method": "GET",
      "expected_status": [200],
      "evidence_type": "text",
      "match": "repositoryformatversion",
      "cvss_score": 5.0,
      "exploitability": "medium",
      "tags": ["source-leak", "git", "info"],
      "recommendation": "Restrict access to .git directory"
    },
    {
      "id": "TAI-CUST-0002",
      "name": "Backup file exposure",
      "vector": "Information Disclosure",
      "url_pattern": "/admin.bak",
      "http_method": "GET",
      "expected_status": [200],
      "evidence_type": "headers",
      "match_headers": {
        "Content-Type": "text/html"
      },
      "cvss_score": 6.5,
      "exploitability": "high",
      "tags": ["backup", "leak", "sensitive-file"],
      "recommendation": "Remove or restrict access to backup files"
    },
    {
      "id": "TAI-CUST-0003",
      "name": "Remote Code Execution via eval",
      "vector": "RCE",
      "url_pattern": "/debug/execute",
      "http_method": "POST",
      "payload": "cmd=whoami",
      "expected_status": [200],
      "evidence_type": "body_contains",
      "match": "root|admin",
      "cvss_score": 9.8,
      "exploitability": "critical",
      "tags": ["rce", "debug", "post"],
      "recommendation": "Disable debug endpoints in production"
    },
    {
      "id": "TAI-CUST-0004",
      "name": "Local File Inclusion",
      "vector": "LFI",
      "url_pattern": "/viewer.php?file=../../../../etc/passwd",
      "http_method": "GET",
      "expected_status": [200],
      "evidence_type": "body_contains",
      "match": "root:x:0:0:",
      "cvss_score": 7.4,
      "exploitability": "high",
      "tags": ["lfi", "path-traversal", "webapp"],
      "recommendation": "Sanitize file paths and implement whitelist"
    },
    {
      "id": "TAI-CUST-0005",
      "name": "Reflected XSS",
      "vector": "XSS",
      "url_pattern": "/search?q=<script>alert('XSS')</script>",
      "http_method": "GET",
      "expected_status": [200],
      "evidence_type": "body_contains",
      "match": "<script>alert('XSS')</script>",
      "cvss_score": 6.1,
      "exploitability": "medium",
      "tags": ["xss", "reflected", "client-side"],
      "recommendation": "Escape user input and use Content Security Policy"
    },
    {
      "id": "TAI-CUST-0006",
      "name": "SSRF to localhost",
      "vector": "SSRF",
      "url_pattern": "/proxy?url=http://127.0.0.1:80/",
      "http_method": "GET",
      "expected_status": [200],
      "evidence_type": "body_contains",
      "match": "Apache|Nginx|localhost",
      "cvss_score": 8.2,
      "exploitability": "high",
      "tags": ["ssrf", "localhost", "misconfiguration"],
      "recommendation": "Validate outbound URLs to only allowed domains"
    }
  ]
}
