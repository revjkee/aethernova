{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Elastic Common Schema (ECS)",
  "ecs_version": "1.12.0",
  "type": "object",
  "properties": {
    "@timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Time the event was recorded in ISO8601 format"
    },
    "log.level": {
      "type": "string",
      "enum": ["trace", "debug", "info", "warn", "error", "fatal"],
      "description": "Log severity level"
    },
    "log.logger": {
      "type": "string",
      "description": "Name of the logger instance"
    },
    "log.origin": {
      "type": "object",
      "properties": {
        "file.name": { "type": "string" },
        "function": { "type": "string" },
        "line": { "type": "integer" }
      }
    },
    "message": {
      "type": "string",
      "description": "Log message"
    },
    "ecs.version": {
      "type": "string",
      "const": "1.12.0"
    },
    "host": {
      "type": "object",
      "properties": {
        "name": { "type": "string" }
      }
    },
    "event": {
      "type": "object",
      "properties": {
        "dataset": { "type": "string" },
        "severity": { "type": "integer" },
        "id": { "type": "string", "format": "uuid" }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "environment": { "type": "string" }
      }
    },
    "process": {
      "type": "object",
      "properties": {
        "pid": { "type": "integer" },
        "thread": {
          "type": "object",
          "properties": {
            "id": { "type": "integer" },
            "name": { "type": "string" }
          }
        }
      }
    },
    "user": {
      "type": "object",
      "properties": {
        "id": { "type": "string" }
      }
    },
    "trace": {
      "type": "object",
      "properties": {
        "id": { "type": "string" }
      }
    },
    "span": {
      "type": "object",
      "properties": {
        "id": { "type": "string" }
      }
    },
    "labels": {
      "type": "object",
      "description": "Custom key-value pairs"
    }
  },
  "required": [
    "@timestamp",
    "log.level",
    "log.logger",
    "message",
    "ecs.version",
    "host",
    "event",
    "service"
  ],
  "additionalProperties": true
}
