{
  "id": null,
  "uid": "llm-errors",
  "title": "LLM Error Tracking Dashboard",
  "tags": ["llmops", "errors", "failures", "quality", "debug"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "stat",
      "title": "Total Internal Errors",
      "id": 1,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "increase(llm_internal_error_total[5m])",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Errors by Type (5xx, 4xx, Timeout)",
      "id": 2,
      "datasource": "Prometheus",
      "targets": [
        { "expr": "rate(llm_http_5xx_errors_total[5m])", "refId": "A", "legendFormat": "5xx" },
        { "expr": "rate(llm_http_4xx_errors_total[5m])", "refId": "B", "legendFormat": "4xx" },
        { "expr": "rate(llm_request_timeout_total[5m])", "refId": "C", "legendFormat": "Timeout" }
      ]
    },
    {
      "type": "table",
      "title": "Top Offending Prompts (Last 10m)",
      "id": 3,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "topk(5, llm_prompt_error_total)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Filtered Outputs",
      "id": 4,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "increase(llm_output_filter_rejections_total[5m])",
          "refId": "A"
        }
      ]
    },
    {
      "type": "gauge",
      "title": "Retry Rate",
      "id": 5,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(llm_inference_retries_total[5m])",
          "refId": "A"
        }
      ],
      "thresholds": {
        "mode": "absolute",
        "steps": [
          { "color": "green", "value": null },
          { "color": "orange", "value": 5 },
          { "color": "red", "value": 10 }
        ]
      }
    },
    {
      "type": "timeseries",
      "title": "Token Overflow Errors",
      "id": 6,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "increase(llm_token_limit_exceeded_total[10m])",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Input/Output Validation Failures",
      "id": 7,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(llm_input_validation_errors_total[5m])",
          "refId": "A",
          "legendFormat": "Input"
        },
        {
          "expr": "rate(llm_output_validation_errors_total[5m])",
          "refId": "B",
          "legendFormat": "Output"
        }
      ]
    },
    {
      "type": "table",
      "title": "Security-Triggered Errors",
      "id": 8,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "topk(5, llm_security_blocked_total)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "heatmap",
      "title": "Error Density Over Time",
      "id": 9,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(llm_internal_error_total[1m])) by (instance)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Hallucination Detected",
      "id": 10,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "increase(llm_hallucination_flagged_total[10m])",
          "refId": "A"
        }
      ]
    }
  ]
}
