{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MITRE Mapping Config Schema",
  "description": "Strict schema for MITRE ATT&CK threat mapping and AI response systems",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$"
    },
    "source": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "condition", "match", "response"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^rule_\\d{3,}$"
          },
          "name": {
            "type": "string"
          },
          "condition": {
            "type": "string",
            "enum": ["all", "any", "threshold"]
          },
          "match": {
            "type": "array",
            "items": {
              "type": "object",
              "minProperties": 1
            }
          },
          "response": {
            "type": "object",
            "required": ["priority", "ai_flag", "notify"],
            "properties": {
              "priority": {
                "type": "string",
                "enum": ["low", "medium", "high", "critical"]
              },
              "ai_flag": {
                "type": "string",
                "enum": ["log_only", "observe", "escalate", "quarantine_ai", "anomaly_track"]
              },
              "auto_isolate": {
                "type": "boolean"
              },
              "notify": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "tags": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": ["version", "source", "rules"],
  "additionalProperties": false
}
