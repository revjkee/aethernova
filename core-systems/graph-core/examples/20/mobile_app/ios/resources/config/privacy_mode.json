{
  "$schema": "https://teslaai.org/schemas/privacy_mode.schema.json",
  "version": "1.8.0",
  "updated_at": "2025-08-01T12:00:00Z",

  "default_mode": "standard",
  "enforced_by": "EthicsEngine",
  "fallback_policy": "isolation",

  "modes": {
    "standard": {
      "description": "Баланс между безопасностью и UX",
      "trackers_blocked": ["ad_networks", "behavioral_analytics"],
      "sensors_allowed": ["camera", "microphone"],
      "data_retention": "session",
      "ai_monitoring": true,
      "encrypted_logs": true
    },
    "high_privacy": {
      "description": "Максимальная защита. Рекомендуется в зонах риска.",
      "trackers_blocked": ["all"],
      "sensors_allowed": [],
      "data_retention": "none",
      "ai_monitoring": true,
      "ai_reasoning_override_required": true,
      "disable_cloud_sync": true,
      "encrypt_memory": true
    },
    "developer": {
      "description": "Для отладки и тестирования. Не использовать в проде.",
      "trackers_blocked": [],
      "sensors_allowed": ["all"],
      "data_retention": "extended",
      "ai_monitoring": false,
      "log_level": "debug"
    }
  },

  "ai_control": {
    "intent_validation": true,
    "zero_trust_scopes": [
      "ethics-core",
      "session-manager",
      "sensor-bridge"
    ],
    "behavioral_heuristics_enabled": true
  },

  "permissions_matrix": {
    "IntentRouter": {
      "can_access": ["standard", "developer"],
      "blocked_in": ["high_privacy"]
    },
    "PushService": {
      "can_access": ["standard", "developer"],
      "requires_user_opt_in": true
    },
    "SensorBridge": {
      "can_access": ["developer"],
      "blocked_in": ["standard", "high_privacy"]
    }
  },

  "legal": {
    "gdpr_compliance": true,
    "localization_opt_in": true,
    "user_data_portability": true
  },

  "ui_indicators": {
    "show_privacy_icon": true,
    "overlay_color": "#1D1D1D",
    "warn_on_sensitive_transition": true
  }
}
