{
  "$schema": "https://teslaai.org/schemas/network_profiles.schema.json",
  "version": "1.8.0",
  "last_updated": "2025-08-01T12:00:00Z",
  "default_profile": "adaptive_secure",

  "profiles": {
    "adaptive_secure": {
      "description": "Автоматическое переключение между мостами/прокси с ИИ-мониторингом",
      "protocol_chain": ["obfs4", "tor", "socks5"],
      "entry_nodes": ["bridge-obfs4-1.teslaai.net", "bridge-obfs4-2.teslaai.org"],
      "fallback_nodes": ["socks5://proxy-backup1.teslaai.io:9050"],
      "zero_trust_validation": true,
      "latency_threshold_ms": 800,
      "ai_link_monitoring": true,
      "rotate_interval_sec": 300
    },

    "tor_only": {
      "description": "Прямое подключение через Tor без мостов",
      "protocol_chain": ["tor"],
      "entry_nodes": ["tor://teslaai-tor.teslaai.net"],
      "zero_trust_validation": true,
      "rotate_interval_sec": 600,
      "ai_link_monitoring": false
    },

    "bridge_minimal": {
      "description": "Ограниченный режим через только 1 мост (в условиях цензуры)",
      "protocol_chain": ["obfs4"],
      "entry_nodes": ["bridge-obfs4-restricted.teslaai.net"],
      "fallback_nodes": [],
      "zero_trust_validation": false,
      "rotate_interval_sec": 900
    },

    "debug_cleartext": {
      "description": "Режим отладки. Только для внутреннего тестирования!",
      "protocol_chain": ["http"],
      "entry_nodes": ["http://debug.teslaai.local:8080"],
      "ai_link_monitoring": false,
      "zero_trust_validation": false,
      "rotate_interval_sec": 0,
      "disabled_in_prod": true
    }
  },

  "ai_fallback_engine": {
    "enabled": true,
    "metrics": ["packet_loss", "latency", "handshake_success_rate"],
    "actions": {
      "on_latency_spike": "rotate_bridge",
      "on_link_failure": "switch_profile",
      "on_compromise_detected": "shutdown_transport"
    }
  },

  "geo_constraints": {
    "avoid_regions": ["CN", "IR", "RU"],
    "require_region_approval": true
  },

  "audit_log": {
    "enabled": true,
    "log_type": "encrypted",
    "log_rotation_days": 3
  }
}
