# === CORE ENVIRONMENT SETTINGS ===
ENV=airgap
DEBUG=False
LOG_LEVEL=info
TIMEZONE=UTC
LANG=ru_RU.UTF-8

# === DATABASE (LOCAL ONLY) ===
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432
POSTGRES_USER=teslaai
POSTGRES_PASSWORD=airgap_secret
POSTGRES_DB=teslaai_main

# === REDIS (LOCAL ONLY) ===
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0

# === RABBITMQ (LOCAL ONLY) ===
RABBITMQ_HOST=127.0.0.1
RABBITMQ_PORT=5672
RABBITMQ_USER=airgap_mq
RABBITMQ_PASSWORD=airgap_secret

# === BACKEND & FRONTEND ===
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8000
FRONTEND_HOST=127.0.0.1
FRONTEND_PORT=3000

# === TELEGRAM AUTH ===
ENABLE_TELEGRAM_AUTH=False
TG_API_TOKEN=
TG_WEBHOOK_SECRET=

# === AI PLATFORM ===
AI_MODEL_PROFILE=airgap_minimal
GRAPH_CORE_ENABLED=True
SELF_SANCTIONING=True
AI_ISOLATION_MODE=on

# === VAULT / SECRETS ===
VAULT_ADDR=http://127.0.0.1:8200
VAULT_TOKEN=airgap_token
VAULT_TLS_VERIFY=False

# === LOGGING & OBSERVABILITY ===
PROMETHEUS_PUSHGATEWAY=http://127.0.0.1:9091
ENABLE_GRAFANA_EXPORT=False
ENABLE_STRUCTURED_LOGS=True
LOG_RETENTION_DAYS=7

# === SECURITY ===
ENABLE_FAILSAFE_MODE=True
SELF_INHIBITOR_CHECKPOINT=airgap
ETHICS_LOCK=True
SIGNATURE_VERIFICATION_REQUIRED=True
FIREWALL_MODE=isolated
ZERO_TRUST_POLICY=enabled

# === DEPLOYMENT FLAGS ===
CANARY_DEPLOY=False
ENABLE_HEALTHCHECK=True
ENABLE_MIGRATIONS_ON_LAUNCH=True

# === TOKENS & KEYS ===
JWT_SECRET_KEY=local_test_secret
TOKEN_EXPIRATION_MINUTES=15
SIGNING_KEY_PATH=/opt/teslaai/keys/signing_key.pem
TRUSTED_CERTS_PATH=/opt/teslaai/keys/certs/

# === AUDIT & INCIDENT (LOCAL) ===
AUDIT_LOG_SINK=local_logs/audit.json
INCIDENT_NOTIFY_EMAIL=offline@teslaai.local
ETHICAL_DECISION_LOGGING=True
