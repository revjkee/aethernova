# --- CORE SYSTEM CONFIG ---
ENV=staging
DEBUG=False
LOG_LEVEL=info
TIMEZONE=UTC
LANG=ru_RU.UTF-8

# --- DATABASE ---
POSTGRES_HOST=db-staging
POSTGRES_PORT=5432
POSTGRES_USER=teslaai
POSTGRES_PASSWORD=${POSTGRES_PASSWORD:-changeme}
POSTGRES_DB=teslaai_staging

# --- REDIS ---
REDIS_HOST=redis-staging
REDIS_PORT=6379
REDIS_DB=1

# --- RABBITMQ ---
RABBITMQ_HOST=rabbit-staging
RABBITMQ_PORT=5672
RABBITMQ_USER=teslaai
RABBITMQ_PASSWORD=${RABBITMQ_PASSWORD:-rabbitpass}

# --- WEB ---
BACKEND_HOST=backend-staging
BACKEND_PORT=8000
FRONTEND_HOST=webapp-staging
FRONTEND_PORT=3000

# --- AUTH ---
JWT_SECRET_KEY=${JWT_SECRET_KEY:-supersecret}
TOKEN_EXPIRATION_MINUTES=60
ENABLE_TELEGRAM_AUTH=True

# --- VAULT ---
VAULT_ADDR=http://vault-staging:8200
VAULT_TOKEN=${VAULT_TOKEN:-testtoken}

# --- CI/CD ---
ENABLE_HEALTHCHECK=True
ENABLE_MIGRATIONS_ON_LAUNCH=True
K8S_PROFILE=staging

# --- AI PLATFORM ---
AI_MODEL_PROFILE=base_stable
GRAPH_CORE_ENABLED=True
SELF_SANCTIONING=True

# --- LOGGING & OBSERVABILITY ---
PROMETHEUS_PUSHGATEWAY=prometheus-staging:9091
ENABLE_GRAFANA_EXPORT=True
ENABLE_STRUCTURED_LOGS=True

# --- SAFETY ---
ENABLE_FAILSAFE_MODE=True
SELF_INHIBITOR_CHECKPOINT=staging
ETHICS_LOCK=True

# --- SIGNATURES ---
SIGNATURE_VERIFICATION_REQUIRED=True
LAUNCH_APPROVAL_LEVEL=2of3
