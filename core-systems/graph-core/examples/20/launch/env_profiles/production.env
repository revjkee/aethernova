# === CORE SYSTEM CONFIG ===
ENV=production
DEBUG=False
LOG_LEVEL=warning
TIMEZONE=UTC
LANG=ru_RU.UTF-8

# === DATABASE (REQUIRED VAULT) ===
POSTGRES_HOST=pg-prod.internal
POSTGRES_PORT=5432
POSTGRES_USER=teslaai
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
POSTGRES_DB=teslaai_main

# === REDIS ===
REDIS_HOST=redis-prod.internal
REDIS_PORT=6379
REDIS_DB=0

# === RABBITMQ ===
RABBITMQ_HOST=rmq-prod.internal
RABBITMQ_PORT=5672
RABBITMQ_USER=teslaai
RABBITMQ_PASSWORD=${RABBITMQ_PASSWORD}

# === BACKEND & FRONTEND ===
BACKEND_HOST=api.teslaai.io
BACKEND_PORT=443
FRONTEND_HOST=app.teslaai.io
FRONTEND_PORT=443

# === TELEGRAM AUTH ===
ENABLE_TELEGRAM_AUTH=True
TG_API_TOKEN=${TG_API_TOKEN}
TG_WEBHOOK_SECRET=${TG_WEBHOOK_SECRET}

# === AI PLATFORM ===
AI_MODEL_PROFILE=prod_ultra
GRAPH_CORE_ENABLED=True
SELF_SANCTIONING=True
AI_ISOLATION_MODE=on

# === VAULT / SECRETS ===
VAULT_ADDR=https://vault.teslaai.io
VAULT_TOKEN=${VAULT_TOKEN}
VAULT_TLS_VERIFY=True

# === LOGGING & OBSERVABILITY ===
PROMETHEUS_PUSHGATEWAY=prometheus.teslaai.io
ENABLE_GRAFANA_EXPORT=True
ENABLE_STRUCTURED_LOGS=True
LOG_RETENTION_DAYS=14

# === SECURITY ===
ENABLE_FAILSAFE_MODE=True
SELF_INHIBITOR_CHECKPOINT=production
ETHICS_LOCK=True
SIGNATURE_VERIFICATION_REQUIRED=True
FIREWALL_MODE=strict
ZERO_TRUST_POLICY=enabled

# === K8S / CI-CD ===
K8S_PROFILE=production
ENABLE_HEALTHCHECK=True
ENABLE_MIGRATIONS_ON_LAUNCH=False
CANARY_DEPLOY=True

# === TOKENS & KEYS ===
JWT_SECRET_KEY=${JWT_SECRET_KEY}
TOKEN_EXPIRATION_MINUTES=15
SIGNING_KEY_PATH=/etc/teslaai/keys/signing_key.pem
TRUSTED_CERTS_PATH=/etc/teslaai/keys/certs/

# === AUDIT & INCIDENT ===
AUDIT_LOG_SINK=siem.teslaai.io
INCIDENT_NOTIFY_EMAIL=secops@teslaai.io
ETHICAL_DECISION_LOGGING=True
