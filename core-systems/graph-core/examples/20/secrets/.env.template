# =======================
# Basic Application Config
# =======================
APP_NAME=TeslaAI
APP_ENV=production
APP_DEBUG=false
APP_PORT=8000
FRONTEND_PORT=3000

# =======================
# Database Configuration
# =======================
POSTGRES_USER=tesla_admin
POSTGRES_PASSWORD=CHANGE_ME_SECURELY
POSTGRES_DB=tesla_db
POSTGRES_HOST=db
POSTGRES_PORT=5432

# =======================
# Redis Configuration
# =======================
REDIS_HOST=redis
REDIS_PORT=6379

# =======================
# JWT & Security
# =======================
JWT_SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECURE_256_BIT_STRING
JWT_EXPIRE_MINUTES=60

# =======================
# Email / SMTP
# =======================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=example_user
SMTP_PASSWORD=example_password
EMAIL_FROM=no-reply@tesla.ai

# =======================
# Monitoring & Observability
# =======================
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA

# =======================
# Logging
# =======================
LOG_LEVEL=INFO
LOG_DIR=/var/log/teslaai

# =======================
# Third-party APIs (examples)
# =======================
OPENAI_API_KEY=YOUR_API_KEY_HERE
SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# =======================
# TLS & Ingress
# =======================
TLS_ENABLED=true
TLS_CERT_PATH=/etc/certs/fullchain.pem
TLS_KEY_PATH=/etc/certs/privkey.pem

# =======================
# MFA / Security Enhancements
# =======================
MFA_ENABLED=true
MFA_ISSUER=TeslaAI_Security

# =======================
# Advanced / Optional
# =======================
MAX_WORKERS=4
RATE_LIMIT_PER_MINUTE=100
ENABLE_WEBAPP_MINI=true
