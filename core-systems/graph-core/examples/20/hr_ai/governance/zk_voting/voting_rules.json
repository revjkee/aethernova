{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DAO Voting Rules",
  "type": "object",
  "required": [
    "quorum_percentage",
    "voting_duration_hours",
    "proposal_types",
    "voting_methods",
    "vote_threshold_percentage",
    "eligibility_criteria",
    "tie_breaker"
  ],
  "properties": {
    "quorum_percentage": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "Минимальный процент участия для признания голосования валидным"
    },
    "voting_duration_hours": {
      "type": "integer",
      "minimum": 1,
      "maximum": 168,
      "description": "Продолжительность голосования в часах"
    },
    "proposal_types": {
      "type": "array",
      "description": "Типы предложений, допустимые для голосования",
      "items": {
        "type": "string",
        "enum": [
          "parameter_change",
          "budget_allocation",
          "election",
          "policy_update",
          "emergency_action"
        ]
      }
    },
    "voting_methods": {
      "type": "array",
      "description": "Доступные методы голосования",
      "items": {
        "type": "string",
        "enum": [
          "single_choice",
          "quadratic_voting",
          "ranked_choice",
          "weighted_voting"
        ]
      }
    },
    "vote_threshold_percentage": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "Процент голосов 'за', необходимый для принятия предложения"
    },
    "eligibility_criteria": {
      "type": "object",
      "description": "Критерии для права голоса",
      "properties": {
        "minimum_token_holdings": {
          "type": "integer",
          "minimum": 0,
          "description": "Минимальное количество токенов, необходимое для участия"
        },
        "membership_duration_days": {
          "type": "integer",
          "minimum": 0,
          "description": "Минимальное количество дней членства"
        }
      },
      "required": ["minimum_token_holdings"]
    },
    "tie_breaker": {
      "type": "string",
      "enum": [
        "chairperson_decision",
        "random_draw",
        "re_voting",
        "escalation_to_council"
      ],
      "description": "Правила разрешения ничьей"
    }
  },
  "additionalProperties": false
}
