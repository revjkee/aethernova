# .editorconfig — промышленный стандарт для engine-core
# Требует поддержки в IDE (VS Code: EditorConfig extension, JetBrains IDE: встроено)

# Базовые правила для всех файлов
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 100

# Python
[*.py]
indent_size = 4
max_line_length = 100
insert_final_newline = true
trim_trailing_whitespace = true

# YAML (конфиги, CI/CD, K8s)
[*.{yml,yaml}]
indent_size = 2
indent_style = space
max_line_length = off
insert_final_newline = true
trim_trailing_whitespace = true

# JSON (configs, package files)
[*.json]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# TOML (pyproject.toml, configs)
[*.toml]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown (документация)
[*.md]
indent_size = 2
max_line_length = off
trim_trailing_whitespace = false  # Разрешаем двойные пробелы для переносов строк

# Shell scripts
[*.sh]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Dockerfile
[Dockerfile]
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Makefile (только tabs!)
[Makefile]
indent_style = tab

# Ignored binary files
[*.{png,jpg,jpeg,gif,ico,svg,woff,woff2,eot,ttf,otf}]
insert_final_newline = false
trim_trailing_whitespace = false
max_line_length = off
