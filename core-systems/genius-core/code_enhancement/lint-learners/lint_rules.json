{
  "lint_rules": {
    "rules": [
      {
        "id": "no_unused_imports",
        "description": "Запрет на неиспользуемые импорты",
        "severity": "error",
        "pattern": "^import\\s+\\w+(\\s+as\\s+\\w+)?$",
        "check": "проверка наличия использования импортируемых модулей в коде",
        "fix": "удаление неиспользуемых импортов"
      },
      {
        "id": "max_line_length",
        "description": "Максимальная длина строки не должна превышать 120 символов",
        "severity": "warning",
        "pattern": "^.{121,}$",
        "fix": "разбиение длинных строк на несколько с сохранением логики"
      },
      {
        "id": "indentation_spaces",
        "description": "Отступы должны быть кратны 4 пробелам",
        "severity": "error",
        "pattern": "^( +)",
        "check": "количество пробелов должно делиться на 4",
        "fix": "автоматическая корректировка отступов"
      },
      {
        "id": "no_trailing_whitespace",
        "description": "Запрет пробелов в конце строк",
        "severity": "error",
        "pattern": "\\s+$",
        "fix": "удаление пробелов в конце строки"
      },
      {
        "id": "variable_naming_snake_case",
        "description": "Имена переменных должны быть в snake_case",
        "severity": "warning",
        "pattern": "^[a-z]+(_[a-z]+)*$",
        "check": "проверка имен переменных по стилю snake_case",
        "fix": "рекомендации по переименованию"
      },
      {
        "id": "function_naming_lower_case",
        "description": "Имена функций должны быть в lower_case_with_underscores",
        "severity": "warning",
        "pattern": "^[a-z]+(_[a-z]+)*$",
        "check": "проверка имен функций",
        "fix": "рекомендации по стилю именования"
      },
      {
        "id": "class_naming_pascal_case",
        "description": "Имена классов должны быть в PascalCase",
        "severity": "warning",
        "pattern": "^[A-Z][a-zA-Z0-9]+$",
        "check": "проверка имен классов",
        "fix": "рекомендации по стилю именования"
      },
      {
        "id": "no_multiple_statements_per_line",
        "description": "Запрет нескольких операторов в одной строке",
        "severity": "error",
        "pattern": ";",
        "fix": "разделение операторов на отдельные строки"
      },
      {
        "id": "mandatory_docstrings",
        "description": "Функции и классы должны иметь docstring",
        "severity": "warning",
        "check": "наличие тройных кавычек после определения функции или класса",
        "fix": "рекомендации добавить документацию"
      },
      {
        "id": "no_shadowing_builtins",
        "description": "Запрет переопределения встроенных имён Python",
        "severity": "error",
        "check": "имена переменных не должны совпадать с именами встроенных функций и типов",
        "fix": "рекомендации по переименованию"
      }
    ],
    "settings": {
      "max_errors_per_file": 10,
      "max_warnings_per_file": 20,
      "auto_fix_enabled": true,
      "language": "python",
      "report_format": "json",
      "exclude_paths": [
        "__pycache__",
        "tests/",
        "migrations/"
      ]
    }
  }
}
